    link(
      href = "/build/css/index.css?v=#{locals.version}"
      media = "screen"
      rel = "stylesheet"
    )

    //- favicon
    link(
      href = "/build/images/favicon.png"
      rel = "shortcut icon"
    )

    //- ios
    link(
      href = "/build/images/icons-ios.png"
      rel = "apple-touch-icon"
    )
    meta(
      console = "Runnable"
      name = "apple-mobile-web-app-title"
