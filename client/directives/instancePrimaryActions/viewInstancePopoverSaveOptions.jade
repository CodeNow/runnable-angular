.popover.menu.bottom.popover-save-options(
  ng-class = "{'in': data.show}"
)
  .arrow.white
  .popover-content
    ul.popover-body.popover-list
      li.popover-list-item(
        ng-class = "{'no-actions': !data.instance.containers[0].running() || data.loading}"
      )
        label.row.label-checkbox Restart Instance on Save
          input.checkbox(
            checked
            ng-disabled = "!data.instance.containers[0].running()"
            ng-model = "data.restartOnSave"
            type = "checkbox"
          )
