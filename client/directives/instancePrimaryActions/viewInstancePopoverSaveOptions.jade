.popover.menu.bottom.popover-primary-options(
  ng-class = "{'in': data.show}"
)
  .arrow.white
  .popover-content
    ul.popover-body.popover-list
      li.popover-list-item(
        ng-class = "{'no-actions': !instance.containers.models[0].running() || loading}"
      )
        label.row.label-checkbox Restart Instance on Save
          input.input-checkbox(
            checked
            ng-disabled = "!instance.containers.models[0].running()"
            ng-model = "data.restartOnSave"
            type = "checkbox"
          )