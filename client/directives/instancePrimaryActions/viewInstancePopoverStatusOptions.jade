.popover.menu.bottom.popover-primary-options(
  ng-class = "{in: active}"
  ng-style = "popoverStyle.getStyle()"
  style = "transform-origin: 95% 0;"
)
  .arrow.white(
    style = "left: auto; right: 8px;"
  )
  .popover-content
    //- if build files are out of date
    .well.well-popover.orange.text-center(
      ng-if = "data.shouldShowUpdateConfigsPrompt"
    ) This containerâ€™s configuration has changed since the current build.
      button.btn.btn-xs.orange(
        ng-click = "actions.updateConfigToMatchMaster()"
      ) Update & Rebuild

    //- if build failed
    .well.well-popover.red.text-center(
      ng-if = "data.instance.status() === 'buildFailed'"
    ) Having build problems? Some errors can be resolved by rebuilding.
      button.btn.btn-xs.red(
        ng-click = "actions.rebuildWithoutCache()"
      ) Rebuild Without Cache

    //- hide list if build failed
    ul.popover-list
      li.popover-list-item(
        ng-if = "!['running', 'buildFailed'].includes(data.instance.status())"
        ng-click = "actions.startInstance()"
      )
        .icons-status.green
        | Start

      li.popover-list-item(
        ng-if = "!['crashed', 'stopped', 'buildFailed'].includes(data.instance.status())"
        ng-click = "actions.stopInstance()"
      )
        .icons-status
        | Stop

      li.popover-list-item(
        ng-if = "!['crashed', 'stopped', 'buildFailed'].includes(data.instance.status())"
        ng-click = "actions.restartInstance()"
      )
        svg.iconnables.icons-restart
          use(
            xlink:href = "#icons-restart"
          )
        | Restart

      li.divider(
        ng-if = "!['buildFailed'].includes(data.instance.status())"
      )
      li.popover-list-item(
        ng-click = "actions.rebuildWithoutCache()"
        ng-if = "data.instance.status() !== 'buildFailed'"
      )
        .iconnables
        | Rebuild Without Cache