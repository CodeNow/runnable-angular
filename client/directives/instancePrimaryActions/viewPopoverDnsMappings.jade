.popover.bottom.popover-dns-mappings(
  ng-class = "{'in': active}"
  ng-init = "\
    dnsMappings = [\
      {name: 'data-dog', elasticHostname: 'datadog-staging-CodeNow.runnableapp.com', branch: 'master', sandbox: 'runnabro (Private)', status: 'green'},\
      {name: 'mavis', elasticHostname: 'mavis-staging-CodeNow.runnableapp.com', branch: 'master', sandbox: 'CodeNow', status: 'green'},\
      {name: 'neo4j', elasticHostname: 'neo4j-staging-CodeNow.runnableapp.com', branch: 'master', sandbox: 'CodeNow', status: 'green'},\
      {name: 'optimus', elasticHostname: 'optimus-staging-CodeNow.runnableapp.com', branch: 'master', sandbox: 'CodeNow', status: 'green'},\
      {name: 'runnable-angular', elasticHostname: 'runnable-angular-staging-CodeNow.runnableapp.com', branch: 'master', sandbox: 'CodeNow', status: 'green'}\
    ];\
    mavisBranches = [\
      {name: 'master', status: 'green'},\
      {name: 'abort-on-uncaught-exception', status: 'gray'},\
      {name: 'bypass-prev-dock', status: 'orange'},\
      {name: 'no-docks-404', status: 'red'},\
      {name: 'remove-numBuild', status: 'green'},\
      {name: 'temporary-branch-to-fork-on-runnable', status: 'green'}\
    ];\
    mavisPrivateBranches = [\
      {name: 'master (prafulrana)', status: 'green'},\
      {name: 'master (runnabro)', status: 'green'}\
    ];\
    state.view = 1;\
  "
  ng-style = "popoverStyle.getStyle()"
  style = "transform-origin: 50% 0"
)
  .arrow
  .popover-views
    //- for view 1, height of list items & (header + list padding)
        for view 2, height of list items & (header + toggle + list padding)

          list item (view 1) = 54px
          list item (view 2) = 36px
          header = 36px
          toggle = 38px
          list padding = 4px * 2

    div(
      ng-class = "{\
        'view-1': state.view === 1,\
        'view-2': state.view === 2\
      }"
      ng-style = "\
        state.view === 1 && {'min-height': {{dnsMappings.length*54 + 36 + 8}} + 'px'} ||\
        (state.view === 2 && !toggle.privateContainers) && {'min-height': {{mavisBranches.length*36 + 36 + 38 + 8}} + 'px'} ||\
        (state.view === 2 && toggle.privateContainers) && {'min-height': {{mavisPrivateBranches.length*36 + 36 + 38 + 8}} + 'px'}\
      "
    )
      .popover-view
        .popover-header
          //- normally, these elements have their transition set on .popover-view,
              but here we want the transition to apply only to the text/elements
          .span(
            style = "opacity: {{state.view === 1 ?  1 : 0}}"
          ) DNS Mappings

        ul.list.popover-list(
          style = "opacity: {{state.view === 1 ?  1 : 0}}"
        )
          li.list-item.popover-list-item.tr.multi-line.clearfix(
            ng-click = "\
              state.view = 2;\
              toggle.disabled = false;\
            "
            ng-repeat = "container in dnsMappings"
          )
            .cell.text-overflow(
              title = "{{container.name}}"
            )
              .text-overflow {{container.name}}
              small.small.text-overflow(
                title = "{{container.elasticHostname}}"
              ) {{container.elasticHostname}}
            .cell.text-overflow
              .icons-status(
                ng-class = "container.status"
                title = "{{container.branch}}"
                tooltip
                tooltip-eval = "instance | cardBuildStatusTitle"
                tooltip-options = "{\"class\":\"bottom\",\"left\":-7,\"top\":12}"
              )
              | {{container.branch}}
              small.small(
                title = "{{container.sandbox}}"
              ) {{container.sandbox}}
            svg.iconnables.icons-arrow-forward.float-right
              use(
                xlink:href = "#icons-arrow-down"
              )

      //- .no-touching is used to prevent clicks on the organization list if private is the active tab
      .popover-view(
        ng-init = "toggle.privateContainers = false"
      )
        .popover-header
          //- toggle.disabled prevents toggles from looking like they've switched mid animation
          svg.btn.btn-sm.iconnables.icons-arrow-backward.pull-left(
            ng-click = "\
              state.view = 1;\
              toggle.disabled = true;\
              toggle.privateContainers = false;\
            "
            style = "opacity: {{state.view === 2 ?  1 : 0}}"
          )
            use(
              xlink:href = "#icons-arrow-down"
            )
          .span(
            style = "opacity: {{state.view === 2 ?  1 : 0}}"
          ) mavis Containers

        //- only show toggle if there are containers in private sandboxes
        .btn-group.btn-toggle.btn-toggle-xs(
          ng-if = "mavisPrivateBranches.length"
          style = "opacity: {{state.view === 2 ?  1 : 0}}"
        )
          .btn.btn-xs.gray.text-overflow(
            ng-class = "{\
              'active': !toggle.privateContainers && !toggle.disabled,\
              'no-touching': !toggle.privateContainers\
            }"
            ng-click = "toggle.privateContainers = !toggle.privateContainers"
            title = "CodeNow"
          ) CodeNow
          .btn.btn-xs.gray.text-overflow(
            ng-class = "{\
              'active': toggle.privateContainers && !toggle.disabled,\
              'no-touching': toggle.privateContainers\
            }"
            ng-click = "toggle.privateContainers = !toggle.privateContainers"
            title = "Private"
          ) Private

        ul.list.popover-list.popover-list-toggle(
          style = "\
            opacity: {{state.view === 2 && !toggle.privateContainers ? 1 : 0}};\
            transform: {{!toggle.privateContainers ? 'translate3d(0,0,0)' : 'translate3d(-100%,0,0)'}}\
          "
        )
          li.list-item.popover-list-item(
            ng-repeat = "branch in mavisBranches"
          )
            //- from status-icon template
            .icons-status(
              ng-class = "branch.status"
              tooltip
              tooltip-eval = "instance | cardBuildStatusTitle"
              tooltip-options = "{\"class\":\"bottom\",\"left\":-7,\"top\":12}"
            )
            | {{branch.name}}

        ul.list.popover-list.popover-list-toggle(
          style = "\
            opacity: {{state.view === 2 && !toggle.privateContainers ? 0 : 1}};\
            transform: {{!toggle.privateContainers ? 'translate3d(100%,0,0)' : 'translate3d(0,0,0)'}}\
          "
        )
          li.list-item.popover-list-item(
            ng-repeat = "branch in mavisPrivateBranches"
          )
            .icons-status(
              ng-class = "branch.status"
              tooltip
              tooltip-eval = "instance | cardBuildStatusTitle"
              tooltip-options = "{\"class\":\"bottom\",\"left\":-7,\"top\":12}"
            )
            | {{branch.name}}