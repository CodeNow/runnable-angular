.popover.help(
  ng-class = "{in: active}"
  ng-style = "popoverStyle.getStyle()"
)
  .help-lists-wrapper
    ul.triggered-help-list
      li.triggered-help-item.clearfix(
        ng-repeat = "helpItem in EC.helpPopover.data.triggered"
      )
        button.btn.btn-icon.btn-icon-xs(
          ng-click = "EC.helpPopover.actions.ignoreHelp(helpItem)"
        )
          svg.iconnables
            use(
              xlink:href = "#icons-close"
            )
        p.p(
          ng-bind-html= "helpItem.label"
        )
        button.btn.btn-sm(
          ng-click = "EC.helpPopover.actions.getHelp(helpItem)"
        ) Show Me
    .general-help-container
      .strong General Help
      ul.general-help-list
        li.general-help-item(
          ng-repeat = "helpItem in EC.helpPopover.data.general"
          ng-hide = "!$index > 5"
          ng-click = "EC.helpPopover.actions.getHelp(helpItem)"
          ng-bind-html= "helpItem.label"
        )
        li.general-help-item
          a.link(
            target = "_blank"
            href = "http://www.youtube.com/watch?v=_uwPKIH990E"
          ) View our Getting Started video
            svg.iconnables
              use(
                xlink:href = "#icons-link-external"
              )
        li.general-help-item
          a.link(
            target = "_blank"
            href = "https://runnable.zendesk.com/hc/en-us/articles/205184275-How-can-containers-in-my-Runnable-Sandbox-communicate-with-each-other-"
          ) Connect two containers together
            svg.iconnables
              use(
                xlink:href = "#icons-link-external"
              )
        li.general-help-item
          a.link(
            target = "_blank"
            href = "http://support.runnable.io"
          ) Documentation
            svg.iconnables
              use(
                xlink:href = "#icons-link-external"
              )

  //- TODO: remove less-help class
  button.btn(
    ng-click = "closePopover()"
  ) Less Help
    svg.iconnables
      use(
        xlink:href = "#icons-arrow-down"
      )
