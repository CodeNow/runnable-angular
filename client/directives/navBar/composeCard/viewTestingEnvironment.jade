header.noscroll.nav-environment-header
  span.grid-block Testing
  branch-test-popover-button(
    instance = "cluster.master"
    ng-if = "cluster.master.attrs.isTesting"
  )
  branch-test-popover-button(
    instance = "CCC.getTestingInstances()[0]"
    ng-if = "!cluster.master.attrs.isTesting"
  )

ul.nav-container-list
  li.li(
    active-account = "activeAccount"
    instance = "cluster.master"
    instance-navigation
    ng-if = "cluster.master.attrs.isTesting"
  )

  li.li(
    instance = "testingInstance"
    instance-navigation
    ng-repeat = "testingInstance in CCC.getTestingInstances(cluster) track by testingInstance.attrs._id"
  )
