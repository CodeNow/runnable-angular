header.noscroll.nav-environment-header(
  ng-repeat = "composeCluster in CCC.composeCluster.clusters track by $index"
)
  span.grid-block Testing
  branch-test-popover-button(
    instance = "composeCluster.master"
    ng-if = "composeCluster.master.attrs.isTesting"
  )
  branch-test-popover-button(
    instance = "CCC.getTestingInstances(composeCluster)[0]"
    ng-if = "!composeCluster.master.attrs.isTesting"
  )

ul.nav-container-list(
  ng-repeat = "testingCluster in CCC.composeCluster.clusters track by $index"
)
  li.li(
    active-account = "activeAccount"
    instance = "testingCluster.master"
    instance-navigation
    ng-if = "testingCluster.master.attrs.isTesting"
  )

  li.li(
    instance = "testingInstance"
    instance-navigation
    ng-repeat = "testingInstance in CCC.getTestingInstances(testingCluster) track by testingInstance.attrs._id"
  )
