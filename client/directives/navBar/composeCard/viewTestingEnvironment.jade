header.noscroll.nav-environment-header
  span.grid-block Testing
  branch-test-popover-button(
    instance = "CCC.composeCluster.master"
    ng-if = "CCC.composeCluster.master.attrs.isTesting"
  )
  branch-test-popover-button(
    instance = "CCC.getTestingInstances()[0]"
    ng-if = "!CCC.composeCluster.master.attrs.isTesting"
  )

ul.nav-container-list
  li.li(
    active-account = "activeAccount"
    instance = "CCC.composeCluster.master"
    instance-navigation
    ng-if = "CCC.composeCluster.master.attrs.isTesting"
  )

  li.li(
    instance = "testingInstance"
    instance-navigation
    ng-repeat = "testingInstance in CCC.getTestingInstances() track by testingInstance.attrs._id"
  )
