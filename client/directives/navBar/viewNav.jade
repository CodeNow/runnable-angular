//- organization menu
.btn-accounts(
  accounts-select
  data = "dataApp.data"
)

a.a(
  ng-if = "($root.featureFlags.demoOrg && !CA.isInDemoFlow()) || (!$root.featureFlags.demoOrg && !CA.currentOrg.isPersonalAccount())"
  ui-sref = "base.config({ userName: CA.activeAccount.oauthName() })"
  ui-sref-active = "active"
)
  svg.iconnables.icons-gear-dark
    use(
      xlink:href = "#icons-gear-dark"
    )
  | Configure

a.a(
  ng-if = "!CA.currentOrg.isPersonalAccount()"
  ui-sref = "base.instances({ userName: CA.activeAccount.oauthName() })"
  ui-sref-active = "active"
)
  svg.iconnables.icons-server-dark
    use(
      xlink:href = "#icons-server-dark"
    )
  | Containers

//- show tooltip whenever the "add team" demo step is not visible
a.grid-block.align-center.justify-center.shrink.btn-add-team(
  internal-modal-helper = "gitHubScopeView"
  ng-if = "$root.featureFlags.gitHubScope"
  tooltip = "Add a team"
  tooltip-active-attr = "false"
  tooltip-options = "{\"class\":\"right\",\"left\":42,\"top\":3}"
)
  svg.iconnables.icons-add
    use(
      xlink:href = "#icons-add"
    )

//- show tooltip whenever the "add team" demo step is not visible
a.grid-block.align-center.justify-center.shrink.btn-add-team(
  ng-click = "CA.demoAddOrg()"
  ng-if = "$root.featureFlags.demoAddTeamStep && CA.shouldShowTeamCTA() && !$root.featureFlags.gitHubScope"
  tooltip = "Add a team"
  tooltip-active-attr = "false"
  tooltip-options = "{\"class\":\"right\",\"left\":42,\"top\":3}"
)
  svg.iconnables.icons-add
    use(
      xlink:href = "#icons-add"
    )

a.a.btn-docs(
  href = "https://runnable.com/docs"
  target = "_blank"
)
  svg.iconnables.icons-docs-dark
    use(
      xlink:href = "#icons-docs-dark"
    )
  span Docs
    svg.iconnables.icons-link-external
      use(
        xlink:href = "#icons-link-external"
      )
