img.logo.logo-icon.float-left(
  height = "45"
  src = "/build/images/runnable-icon-white.svg"
  width = "45"
  ng-click = "editFeatureFlags = dataApp.data.configEnvironment === 'development' || dataApp.data.configEnvironment === 'staging'"
  pop-over
  pop-over-active = "editFeatureFlags"
  pop-over-template = "viewPopoverFeatureFlags"
  pop-over-trigger = "activeAttr"
  pop-over-options = "{\"left\":40}"
)

.btn-group
  a.btn.btn-sm.purple(
    ng-class = "{\
      active: dataApp.isInstancePage,\
      'no-touching': !dataApp.data.activeAccount || dataApp.isInstancePage || dataApp.creatingInstance\
    }"
    ui-sref = "instance.home({ userName: dataApp.data.activeAccount.oauthName() })"
  )
    svg.iconnables
      use(
        xlink:href = "#icons-server-dark"
      )
    | Containers
  a.btn.btn-sm.purple(
    ng-class = "{\
      'active': dataApp.isConfigPage,\
      'no-touching': !dataApp.data.activeAccount || dataApp.isConfigPage\
    }"
    ui-sref = "config.home({ userName: dataApp.data.activeAccount.oauthName() })"
  )
    svg.iconnables
      use(
        xlink:href = "#icons-advanced-dark"
      )
    | Configure

//- menu
accounts-select(
  data = "dataApp.data"
)
