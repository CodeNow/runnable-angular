img.logo.logo-icon.float-left(
  height = "45"
  src = "/build/images/runnable-icon-white.svg"
  width = "45"
  ng-click = "editFeatureFlags = CA.data.activeAccount.oauthName() === 'CodeNow'"
  pop-over
  pop-over-active = "editFeatureFlags"
  pop-over-template = "viewPopoverFeatureFlags"
  pop-over-trigger = "activeAttr"
  pop-over-options = "{\"left\":40}"
)

.btn-group
  a.btn.btn-sm.purple(
    ng-class = "{\
      active: CA.state.current.name === 'instance.instance',\
      'no-touching': !CA.data.activeAccount || CA.state.current.name === 'instance.instance' || dataApp.creatingInstance\
    }"
    ui-sref = "instance.home({ userName: CA.data.activeAccount.oauthName() })"
  )
    svg.iconnables
      use(
        xlink:href = "#icons-server-dark"
      )
    | Containers
  a.btn.btn-sm.purple(
    ng-class = "{\
      'active': CA.state.current.name === 'config.home',\
      'no-touching': !CA.data.activeAccount || CA.state.current.name === 'config.home'\
    }"
    ui-sref = "config.home({ userName: CA.data.activeAccount.oauthName() })"
  )
    svg.iconnables
      use(
        xlink:href = "#icons-advanced-dark"
      )
    | Configure

//- menu
accounts-select(
  data = "CA.data"
)
