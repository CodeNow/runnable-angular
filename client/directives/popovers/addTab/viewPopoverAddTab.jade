.popover.menu.bottom.popover-add-tab(
  ng-class = "{in: active}"
  ng-style = "popoverStyle.getStyle()"
)
  .arrow.white
  .popover-content
    ul.list.popover-list
      li.list-item.popover-list-item.small.disabled Open Tab
      li.list-item.popover-list-item(
        ng-click = "actions.addTerminal(); POC.closePopover()"
        ng-if = "data.options.term"
      )
        svg.iconnables
          use(
            xlink:href = "#icons-start-cmd"
          )
        | Terminal
      li.list-item.popover-list-item(
        ng-click = "actions.addBuildStream(); POC.closePopover()"
        ng-if = "data.options.build"
      )
        svg.iconnables
          use(
            xlink:href = "#icons-build-logs"
          )
        | Build Logs
      li.list-item.popover-list-item(
        ng-click = "actions.addLogs(); POC.closePopover()"
        ng-if = "data.options.server"
      )
        svg.iconnables
          use(
            xlink:href = "#icons-cmd-logs"
          )
        | CMD Logs
      li.list-item.popover-list-item(
        ng-click = "actions.addBackupStream(); POC.closePopover()"
        ng-if = "data.options.server"
      )
        svg.iconnables
          use(
            xlink:href = "#icons-cmd-logs"
          )
        | Backup
