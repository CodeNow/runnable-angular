.popover.bottom.menu(
  ng-class = "{in: active}"
  ng-style = "popoverStyle.getStyle()"
)
  .arrow.white
  .popover-content
    ul.popover-list
      li.list-item.popover-list-item(
        ng-if = "data.canUpload"
      )
        svg.iconnables.icons-file-tree
          use(
           xlink:href = "#icons-file-upload"
          )
        | Upload File
        input.input-upload(
          ng-file-change = "actions.uploadFiles($files, $event)"
          ng-file-select
          ng-multiple = "true"
          type = "file"
        )
      li.divider(
        ng-if = "data.canUpload"
      )
      li.popover-list-item(
        ng-click = "actions.createFile()"
      )
        svg.iconnables.icons-file-tree
          use(
            xlink:href = "#icons-file-new"
          )
        | New File
      li.popover-list-item(
        ng-click = "actions.createFolder()"
      )
        svg.iconnables.icons-file-tree
          use(
            xlink:href = "#icons-folder-new"
          )
        | New Folder
      //- if the user can add a repository…
      li.divider
      li.list-item.popover-list-item
        svg.iconnables.icons-file-tree
          use(
            xlink:href = "#icons-repository-new"
          )
        | Add Repository…