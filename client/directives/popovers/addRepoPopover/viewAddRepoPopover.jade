//- add repo button
button.btn.btn-xs.btn-icon.white.sub-header-action.btn-add-repo(
  ng-class = "{active: repoListPopover.data.show}"
  ng-click = "repoListPopover.data.show = !repoListPopover.data.show"
  pop-over
  pop-over-active = "repoListPopover.data.show"
  pop-over-actions = "repoListPopover.actions"
  pop-over-data = "repoListPopover.data"
  pop-over-options = "{\"left\":-117,\"top\":45}"
  pop-over-template = "viewPopoverAddRepo"
  pop-over-trigger = "activeAttr"
)
  svg.iconnables.icons-add
    use(
      xlink:href = "#icons-add"
    )
