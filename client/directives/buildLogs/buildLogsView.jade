//- pre steps


.pre.build-log(
  ng-repeat = "command in BLC.buildLogs"
  ng-class = "{'build-log-toggle' : command.content.length, 'in': command.content.length > 0 && command.expanded }"
)
  .build-log-header(
    ng-click = "command.expanded = !command.expanded"
  )
    .build-log-header-text(
      ng-bind-html = "command.command"
    )

  .build-log-content(
    ng-if = "command.content.length"
    ng-bind-html = "command.trustedContent"
  )