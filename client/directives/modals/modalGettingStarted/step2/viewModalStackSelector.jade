label.label.clearfix
  .label-col Branch
    small.small Specify the branch of your repository
  .btn.btn-sm.gray.btn-select.text-overflow
    svg.iconnables.icons-branch
      use(
        xlink:href = "#icons-branch"
      )
    | {{state.activeBranch.attrs.name}}
    svg.iconnables.icons-arrow-down
      use(
        xlink:href = "#icons-arrow-down"
      )
    select.select(
      ng-change = "selectBranch(state.activeBranch)"
      ng-model = "state.activeBranch"
      ng-options = "branch as branch.attrs.name group by 'Select a branch' for branch in state.selectedRepo.branches.models"
    )
.label.clearfix
  .label-col Framework/Language
    small.small The primary framework or language of your repository
  .btn-group
    button.btn.btn-sm.gray.btn-select.text-overflow
      img.img(
        height = "18px"
        src = "/build/images/home/icons-node-js.svg"
        width = "18px"
      )
      small.small node.js
      //- small.small {{ state.stack.name }}
