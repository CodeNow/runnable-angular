.guide Runnable uses environment variables to network your dependency servers together.
label.label.clearfix
  .label-col mysql-server
    small.small mysql-server.user.runnable.io
  .input-col.ace_editor.ace-tm(
    ng-class = "{}"
  )
    //- wannabe ace gutter
    .ace_gutter
      .ace_layer.ace_gutter-layer
        .ace_gutter-cell 1
    input.input.input-sm.input-ace(
      ng-blur = "{}"
      ng-focus = "{}"
      placeholder = "SQL_HOSTNAME=mysql-server.user.runnable.io"
      value = "SQL_HOSTNAME=mysql-server.user.runnable.io"
    )
label.label.clearfix
  .label-col rabbitmq-server
    small.small rabbitmq-server.user.runnable.io
  .input.input-sm(
    placeholder = "RABBIT_NAME=mysql-server.user.runnable.io"
    ui-ace = "{\
        firstLineNumber: 1,\
        useWrapMode : true\
      }"
    value = "RABBIT_NAME=mysql-server.user.runnable.io"
  )
footer.modal-footer.clearfix
  button.btn.green(
    ng-click = "actions.createAndBuild();"
    ng-disabled = "envStep.$invalid"
    ng-show = "state.step === 3"
  ) Build Server
  button.btn.white(
    ng-click = "state.step = 2"
  ) Previous Step