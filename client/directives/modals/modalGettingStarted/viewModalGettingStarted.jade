.modal-dialog.modal-wizard.modal-getting-started(
  ng-click = "$event.stopPropagation()"
)
  .modal-container
    header.modal-header(
      ng-show = "state.step === 1"
    )
      h1.modal-heading(
        ng-show = "state.step !== 1"
      ) Create New Server
    //- header.modal-header.modal-wizard-header
      .row
        small.small Create New Server
      .row
        button.btn.btn-icon
          svg.iconnables.icons-arrow-back
            use(
              xlink:href = "#icons-arrow-back"
            )
        h1.modal-heading CodeNow/runnable-angular
        button.btn.btn-xs.gray.btn-select
          svg.iconnables.icons-branch
            use(
              xlink:href = "#icons-branch"
            )
          span master
          svg.iconnables.icons-arrow-down
            use(
              xlink:href = "#icons-arrow-down"
            )
          select.select
            option(
              selected
            ) master
            option not-master
    .modal-body.modal-repo-selector(
      actions = "actions"
      data = "data"
      gs-repo-selector
      ng-show = "state.step === 1"
      state = "state"
    )
    .modal-body.modal-stack-selector.clearfix(
      data = "data"
      ng-show = "state.step === 2"
      actions = "actions"
      modal-stack-selector
      state = "state"
    )
