//- step 1: select organization
.modal-dialog.modal-wizard.modal-getting-started.step-1(
  actions = "actions"
  data = "data"
  gs-organization-selector
  ng-if = "state.step === 1"
  ng-init = "state.step === 1"
  state = "state"
)

//- step 2: select repository
.modal-dialog.modal-wizard.modal-getting-started.step-2(
  actions = "actions"
  data = "data"
  gs-repository-selector
  ng-if = "state.step === 2"
  state = "state"
)

//- step 3: environment setup
.modal-dialog.modal-wizard.modal-getting-started.step-3(
  actions = "actions"
  data = "data"
  gs-environment-setup
  ng-if = "state.step === 3"
  state = "state"
)

