.modal-dialog.modal-wizard.modal-getting-started.modal-wizard-1(
  ng-click = "$event.stopPropagation()"
)
  .modal-container
    header.modal-header
      h1.modal-heading Create New Server
    .modal-body.modal-repo-selector(
      actions = "actions"
      data = "data"
      ng-include = "'viewModalRepoSelector'"
      gs-repo-selector
      ng-show = "state.step === 1"
      state = "state"
    )
    .modal-body.modal-stack-selector.clearfix(
      allDependencies = "allDependencies"
      actions = "actions"
      ng-include = "'viewModalStackSelector'"
      ng-show = "state.step === 2"
      setup-stack-dependencies
      state = "state"
    )
    .modal-body.modal-stack-dependencies(
      ng-include = "'viewModalStackDependencies'"
      ng-show = "state.step === 3"
    )

  .guide-wrapper.guide-1(
    style = "left: -18px; top: 117px;"
  )
    .guide.guide-mark
    .popover.left.popover-guides.in(
      style = "left: -271px; top: -39px;"
    )
      .arrow.white
      .popover-content.clearfix
        h3.popover-header Select a repository
        p Choose one of your repos to run on a server
