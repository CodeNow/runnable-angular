.modal-backdrop.in
  .modal-dialog.modal-settings(
    ng-init = "currentTab = 'billing'"
  )
    header.modal-header
      .container-title-wrapper.no-touching
        .container-title CodeNow Settings

      .row.modal-tabs.clearfix
        button.btn.btn-radio(
          data-badge-count = "!"
          ng-class = "{\
            'active': currentTab === 'billing',\
            'badge': true,\
            'badge-red': true\
          }"
          ng-click = "currentTab = 'billing'"
          ng-show = "$root.featureFlags.billing"
        )
          svg.iconnables
            use(
              xlink:href = "#icons-billing"
            )
          .btn-text Billing
        button.btn.btn-radio(
          ng-class = "{'active': currentTab === 'teamManagement'}"
          ng-click = "currentTab = 'teamManagement'"
          ng-show = "$root.featureFlags.teamManagement"
        )
          svg.iconnables
            use(
              xlink:href = "#icons-team"
            )
          .btn-text Manage Team
        button.btn.btn-radio(
          ng-class = "{'active': currentTab === 'slackIntegration'}"
          ng-click = "currentTab = 'slackIntegration'"
        )
          img.img.iconnables(
            height = "24"
            src = "/build/images/logos/logo-icon-slack.svg"
            width = "24"
          )
          .btn-text Slack Integration
        //- button.btn.btn-radio(
        //-   disabled
        //- )
        //-   svg.iconnables
        //-     use(
        //-       xlink:href = "#icons-advanced"
        //-     )
        //-   .btn-text Settings
        //-     .btn.btn-xxs.orange.no-touching Coming Soon

    section.modal-body.js-animate
      //- loading spinner
      //- .spinner-wrapper.spinner-md.in(
      //-   ng-include = "'spinner'"
      //- )

      //- billing
      .form-billing(
        ng-if = "currentTab === 'billing'"
        ng-include = "'billingForm'"
      )

      //- team
      .form-team(
        ng-if = "currentTab === 'teamManagement'"
        ng-include = "'teamForm'"
      )

      //- slack integration
      form.form-integrations(
        ng-if = "currentTab === 'slackIntegration'"
        ng-include = "'integrationsForm'"
        ng-init = "data.verified = false"
      )

    footer.modal-footer.clearfix
      button.btn.white(
        ng-click = "defaultActions.close()"
        type = "button"
      ) Done
