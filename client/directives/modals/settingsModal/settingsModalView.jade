.modal-backdrop.in
  .modal-dialog.modal-settings
    header.modal-header
      .container-title-wrapper.no-touching
        .container-title CodeNow Settings

      .row.modal-tabs.clearfix
        button.btn.btn-radio(
          ng-attr-data-badge-count = "{{$root.featureFlags.trial ? '12' : '!'}}"
          ng-class = "{\
            'active': SEMC.currentTab === 'billing',\
            'badge': $root.featureFlags.billing || $root.featureFlags.trial,\
            'badge-red': $root.featureFlags.billing && !$root.featureFlags.trial\
          }"
          ng-click = "SEMC.currentTab = 'billing'"
          ng-show = "$root.featureFlags.billing"
        )
          svg.iconnables
            use(
              xlink:href = "#icons-billing"
            )
          .btn-text Billing
        button.btn.btn-radio(
          ng-class = "{\
            'active': SEMC.currentTab === 'teamManagement',\
          }"
          ng-click = "SEMC.currentTab = 'teamManagement'"
          ng-show = "$root.featureFlags.teamManagement"
        )
          svg.iconnables
            use(
              xlink:href = "#icons-team"
            )
          .btn-text Teammates
        button.btn.btn-radio(
          ng-class = "{'active': SEMC.currentTab === 'slackIntegration'}"
          ng-click = "SEMC.currentTab = 'slackIntegration'"
          ng-show = "$root.featureFlags.teamManagement"
        )
          img.img.iconnables(
            height = "24"
            src = "/build/images/logos/logo-icon-slack.svg"
            width = "24"
          )
          .btn-text Slack Integration
        //- button.btn.btn-radio(
        //-   disabled
        //- )
        //-   svg.iconnables
        //-     use(
        //-       xlink:href = "#icons-advanced"
        //-     )
        //-   .btn-text Settings
        //-     .btn.btn-xxs.orange.no-touching Coming Soon

    section.modal-body.js-animate(
      ng-if = "SEMC.currentTab === 'billing'"
      ng-include = "'billingForm'"
    )

    section.modal-body.js-animate(
      ng-if = "SEMC.currentTab === 'teamManagement'"
      team-management-form
    )

    //- slack integration
    section.modal-body.js-animate(
      ng-if = "SEMC.currentTab === 'slackIntegration'"
      slack-integration-form
    )

    footer.modal-footer.clearfix
      button.btn.white.float-right(
        ng-click = "SEMC.close()"
        type = "button"
      ) Done
