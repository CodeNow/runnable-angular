.popover.menu.bottom(
  ng-class = "{in: active}"
  ng-style = "popoverStyle.getStyle()"
  style = "transform-origin: 90% 0"
)
  .arrow.white(
    style = "left: auto; right: 0"
  )
  .popover-content
    ul.popover-list
      li.list-item.popover-list-item(
        ng-click = "actions.resendInvitation(data)"
      )
        svg.iconnables
        | Resend Invite
      // Needed for when we have more advanced team management functionality
      li.divider(
        ng-if = "$root.featureFlags.teamManagementAdvanced"
      )
      li.list-item.popover-list-item (
        ng-if = "$root.featureFlags.teamManagementAdvanced"
      )
        svg.iconnables
          use(
            xlink:href = "#icons-delete"
          )
        | Cancel Invite
