.grid-block.vertical.modal-backdrop.welcome
  img.grid-block.shrink.justify-center.logo.img(
    alt = "Runnable Logo"
    height = "36"
    src = "/build/images/runnable-logo.svg"
    width = "192"
  )
  img.grid-block.shrink.img.runnabear(
    height = "130"
    src = "/build/images/runnabear-waving-3.png"
    width = "230"
  )
  .grid-block.vertical.shrink.modal-dialog.modal-sm
    header.modal-header
      h1.modal-heading Welcome back!
    section.modal-body
      p.p.padding-sm.weight-light We’ve temporarily&#32;
        span(
          title = "paws’d"
        ) paused&#32;
        | your environments due to inactivity. Give us the go ahead and we’ll get you back up and running.
    footer.grid-block.vertical.modal-footer
      button.grid-content.btn.btn-md.green.icons-intercom(
        ng-click = "$root.$broadcast('intercom::pawsd')"
      ) Chat Now
      a.grid-content.link.text-gray.text-center.margin-bottom-xs(
        href = "mailto:support@runnable.com?subject=I’m back!&body=I’d like to continue using Runnable. Please get my environments back up and running."
      ) Email Support
  .grid-block.shrink.justify-center.margin-top-sm.margin-bottom-xl.welcome-footer.text-white.weight-light(
    grace-period-footer
    close = "WBC.close"
  )
