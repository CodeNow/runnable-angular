.grid-block.vertical.modal-backdrop.welcome
  img.grid-block.shrink.justify-center.logo.img(
    alt = "Runnable Logo"
    height = "36"
    src = "/build/images/runnable-logo.svg"
    width = "192"
  )
  img.grid-block.shrink.img.runnabear(
    height = "130"
    src = "/build/images/runnabear-waving-3.png"
    width = "230"
  )

  .grid-block.vertical.shrink.modal-dialog.modal-sm.modal-org-select
    animated-panel-container
      //- this is the default panel if the user has one or more orgs
      animated-panel(
        default = "true"
        name = "orgSelection"
      )
        .fade(
          ng-class = "{'in': isActivePanel()}"
          ng-include = "'orgSelectModalView'"
        )
      //- this is the default panel if the user has no orgs
      animated-panel(
        name = "grantAccess"
      )
        .grid-block.vertical.align-center.text-center.fade(
          ng-class = "{'in': isActivePanel()}"
          ng-include = "'grantAccessView'"
        )
      animated-panel.grid-block(
        name = "createOrg"
      )
        .grid-block.vertical.align-center.text-center.fade(
          ng-class = "{'in': isActivePanel()}"
          ng-include = "'createOrganizationView'"
        )
      animated-panel.grid-block(
        name = "authorizeOrg"
      )
        .grid-block.vertical.align-center.text-center.fade(
          ng-class = "{'in': isActivePanel()}"
          ng-include = "'authorizeOrganizationView'"
        )

  //- sign out (always) + change team (during grace period)
  .grid-block.shrink.justify-center.margin-top-sm.margin-bottom-xl.welcome-footer.text-white(
    grace-period-footer
  )
