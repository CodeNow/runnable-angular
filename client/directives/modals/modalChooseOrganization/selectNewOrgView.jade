nav.grid-block.align-center.modal-header.nav
  svg.iconnables.icons-arrow-backward(
    ng-click = "goToPanel('authorizeOrg', 'back')"
  )
    use(
      xlink:href = "#icons-arrow-down"
    )
  ol.grid-block.justify-center(
    active-step = "3"
    progress
    steps = "4"
  )

.grid-block.vertical.padding-sm.padding-top-lg
  h1.h1.text-center Confirm your organization.
  p.padding-sm.p.weight-light(
    ng-if = "COMC.newOrgList.length === 1"
  ) Is this the organization you want to use?
  p.margin-top-sm.margin-bottom-md.p.text-center.weight-light(
    ng-if = "COMC.newOrgList.length > 1"
  ) Select the organization you want to use.

  ol.grid-block.vertical.margin-top-sm.list
    li.grid-block.align-center.list-item.btn.white(
      data-event-name = "Demo: Confirmed org to use"
      ng-click = "COMC.actions.createOrCheckDock(org.oauthName());"
      ng-repeat = "org in COMC.newOrgList | orderBy:'attrs.login'"
      title = "{{org.oauthName()}}"
    )
      img.grid-content.shrink(
        height = "30"
        ng-src = "{{org.gravitar()}}"
        width = "30"
      )
      span.grid-content.text-left.text-overflow {{org.oauthName()}}
      svg.grid-content.iconnables.icons-arrow-forward.shrink
        use(
          xlink:href = "#icons-arrow-down"
        )
