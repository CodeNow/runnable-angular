.modal-dialog.modal-error(
  ng-click = "$event.stopPropagation()"
)
  header.modal-header
    h1.modal-heading Something went wrong.
  section.modal-body.clearfix
    .modal-description.well.well-code.gray(
      ng-repeat = "error in data.errors track by $index"
    ) {{ error.message }}

  footer.modal-footer
    button.btn.white(
      ng-click = "actions.close(defaultActions.cancel);"
    ) Dismiss