.modal-dialog(
  ng-click = "$event.stopPropagation()"
)
  header.modal-header
    h1.modal-heading Delete Server
  section.modal-body
    p.modal-description Your server, #{''}
      strong {{ data.instance.attrs.name }}
      | , will be permanently removed.
  section.modal-inset(
    ng-class = "{in: data.deleteLinked}"
    ng-init = "data.deleteLinked = true"
  )
    small.small Deleting linked servers
    .list
      label.list-item.label-checkbox
        input.input-checkbox(
          checked
          type = "checkbox"
        )
        | server-name
      label.list-item.label-checkbox
        input.input-checkbox(
          checked
          type = "checkbox"
        )
        | server-name
      label.list-item.label-checkbox
        input.input-checkbox(
          checked
          type = "checkbox"
        )
        | server-name
  footer.modal-footer
    label.label-checkbox.btn-checkbox
      input.input-checkbox(
        checked
        ng-click = "data.deleteLinked = !data.deleteLinked"
        type = "checkbox"
      )
      | Delete linked servers
    button.btn.orange(
      ng-click = "actions.deleteInstance(); \
        defaultActions.cancel();"
    ) Delete Server
    button.btn.white(
      ng-click = "defaultActions.cancel()"
    ) Go Back

