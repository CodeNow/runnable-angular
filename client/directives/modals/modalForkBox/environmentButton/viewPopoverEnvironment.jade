//- data is an instance
.popover.bottom.popover-environment(
  ng-class = "{in: active}"
  ng-style = "popoverStyle.getStyle()"
)
  .arrow
  h3.popover-title
    span.title Environment Variables
  .popover-content
    label.input-group(
      ng-class = "{focus: data.state.showFocus}"
      ng-repeat = "env in data.state.envVars"
    )
      span.input-label(
        title = "{{ env.key}}"
      ) {{ env.key }}
      input.input(
        ng-blur = "data.state.showFocus = false"
        ng-focus = "data.state.showFocus = true"
        ng-model = "env.value"
        select-all
      )
  footer.popover-footer
    //- TODO
    button.btn.btn-sm.green(
      ng-click = "actions.saveEnv(data.instance, $event)"
    ) Save
    button.btn.btn-sm.white(
      ng-click = "actions.cancelEnv(data.instance, $event)"
    ) Cancel
