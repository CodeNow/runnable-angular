//- pull request link
a.grid-block.align-center.btn(
  ng-class = "{\
    'btn-xs': $root.featureFlags.mixAndMatchBranches,\
    'green': $root.featureFlags.mixAndMatchBranches,\
    'btn-xxs': !$root.featureFlags.mixAndMatchBranches\
  }"
  ng-click = "$emit('demo::prLinkClicked'); openedPRUrl()"
  ng-href = "{{pr.html_url}}"
  target = "_blank"
  title = "view pull request on GitHub"
)
  svg.iconnables.icons-pull-request
    use(
      xlink:href = "#icons-pull-request"
    )
  | Open PR

.popover.bottom.in.below-modals.popover-pr-link(
  ng-class = "{'deprecated': !$root.featureFlags.composeInstance}"
  ng-if = "showPrCallout()"
  ng-include = "'instanceHeaderPRLinkPopoverView'"
)
