label.label-jump(
  branch-selector
  loading-promises-target = "editServerModal"
  state = "BCSC.data"
)

.spinner-wrapper.spinner-backdrop.spinner-gray.spinner-md.in(
  ng-if = "(BCSC.data.branch && !BCSC.data.branch.commits.models.length)"
  ng-include = "'spinner'"
)

ul.list.list-servers.list-commits(
  ng-if = "!BCSC.data.latestCommit && !fetchingBranches"
)
  li.list-item(
    ng-class = "{active: BCSC.data.commit === commit, disabled: state.saving}"
    ng-click = "BCSC.selectCommit(commit)"
    ng-repeat = "commit in BCSC.data.branch.commits.models | orderBy: '-attrs.commit.committer.date'"
  ) {{commit.attrs.commit.message}}
    .toggle-group-detail
      small.small.text-overflow {{commit.attrs.author.login}} authored {{commit.attrs.commit.committer.date | timeFrom}}
      a.small.link.monospace(
        ng-click = "$event.stopPropagation()"
        ng-href = "{{ commit.attrs.html_url }}"
        target = "_blank"
      ) {{ ::commit.attrs.sha | limitTo:7 }}
