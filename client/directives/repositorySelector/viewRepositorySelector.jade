//- choose repository
.popover-view(
  ng-class = "{\
    'view-2': state.view === 2,\
    'view-3': state.view === 3\
  }"
  ng-include = "'viewPopoverFilesRepositorySelect'"
)

//- repository options
.popover-view(
  ng-class = "{\
    'view-2': state.view === 2,\
    'view-3': state.view === 3\
  }"
  ng-if = "!data.gitDataOnly"
  ng-include = "'viewPopoverFilesRepositoryOptions'"
)

//- commits/branch
.popover-view(
  ng-class = "{\
    'view-2': state.view === 2,\
    'view-3': state.view === 3\
  }"
  ng-include = "'viewPopoverFilesRepositoryCommit'"
)