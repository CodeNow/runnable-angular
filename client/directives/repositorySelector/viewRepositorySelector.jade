animated-panel-container
  animated-panel(
    name = "repoSelect"
    style="width: 356px"
  )
    div(
      ng-include = "'viewPopoverFilesRepositorySelect'"
    )

  //- repository options
  animated-panel(
    name = "repoOptions"
    style="width: 356px"
    ng-if = "!data.gitDataOnly"
  )
    div(
      ng-include = "'viewPopoverFilesRepositoryOptions'"
    )

  //- commits/branch
  animated-panel(
    name = "commit"
    style="width: 356px"
  )
    div(
      ng-include = "'viewPopoverFilesRepositoryCommit'"
    )
