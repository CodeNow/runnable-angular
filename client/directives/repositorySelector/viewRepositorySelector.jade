.popover-views(
  ng-class = "{\
      'view-2': state.view === 2,\
      'view-3': state.view === 3\
    }"
)
  //- choose repository
  .popover-view(
    ng-include = "'viewPopoverFilesRepositorySelect'"
  )

  //- repository options
  .popover-view(
    ng-include = "'viewPopoverFilesRepositoryOptions'"
  )

  //- commits/branch
  .popover-view(
    ng-include = "'viewPopoverFilesRepositoryCommit'"
  )