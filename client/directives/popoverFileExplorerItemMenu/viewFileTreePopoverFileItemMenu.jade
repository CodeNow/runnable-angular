.popover.bottom.menu.context-menu(
  ng-class = "{in: fileItemData.isOpen}"
  ng-style = "fileItemData.eStyle"
  right-click
)
  .popover-content
    ul.popover-body.popover-list
      li.popover-list-item(
        ng-click = "fileItemData.actions.openFile();\
          $event.stopPropagation();"
      )
        svg.iconnables
          use(
            xlink:href = "#icons-file-open"
          )
        | Open
      li.divider
      li.popover-list-item(
        ng-click = "fileItemData.actions.renameFile();\
          $event.stopPropagation();"
      )
        svg.iconnables
          use(
            xlink:href = "#icons-file-modify"
          )
        | Rename
      li.popover-list-item(
        ng-click = "fileItemData.actions.deleteFile();\
          $event.stopPropagation();"
      )
        svg.iconnables
          use(
            xlink:href = "#icons-file-delete"
          )
        | Delete
