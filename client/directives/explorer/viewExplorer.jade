h2.sub-header {{ title }}
  button.btn.btn-xs.btn-icon.white.sub-header-action(
    ng-class = "{active: filePopover.data.show}"
    toggle-pop-over
    toggle-pop-over-model = "filePopover.data.show"
  )
    svg.iconnables.icons-add
      use(
        xlink:href = "#icons-add"
      )
    pop-over(
      actions = "filePopover.actions"
      data = "filePopover.data"
      popover-options = "{\"left\":-74,\"top\":40}"
      template = "viewFileTreePopoverFileExplorerMenu"
    )
ul.file-tree
  //- this is the root dir; there can be only one.
  li(
    file-tree-dir
    file-model = "fileModel"
    parent-dir = "rootDir"
    dir = "rootDir"
    open-items = "openItems"
    read-only = "readOnly"
    is-root-dir = "true"
    show-repo-folder = "showRepoFolder"
  )
