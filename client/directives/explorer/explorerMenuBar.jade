.row-heading(
  ng-click = "$storage.explorerIsClosed = !$storage.explorerIsClosed"
  ng-class = "{ closed: $storage.explorerIsClosed }"
)
  svg.iconnables.icons-disclose
    use(
      xlink:href = "#icons-disclose"
    )
  | {{ explorerTitle }}
  button.btn.btn-xs.btn-icon.sub-header-action(
    ng-class = "{active: filePopover.data.show}"
    ng-if = "!$storage.explorerIsClosed && fileModel.running()"
    pop-over
    pop-over-actions = "filePopover.actions"
    pop-over-data = "filePopover.data"
    pop-over-options = "{\"left\":-68,\"top\":40}"
    pop-over-template = "viewFileTreePopoverFileExplorerMenu"
    pop-over-active = "filePopover.data.show"
  )
    svg.iconnables.icons-add
      use(
        xlink:href = "#icons-add"
      )
.empty-state.well(
  ng-if = "!$storage.explorerIsClosed && !fileModel.running()"
)
  span.branch-name The container must be running in order to view its files.