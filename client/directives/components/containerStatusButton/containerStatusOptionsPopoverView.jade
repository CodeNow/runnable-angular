.popover.menu.bottom.popover-primary-options(
  ng-class = "{'in': active}"
  ng-style = "popoverStyle.getStyle()"
)
  .arrow.white
  .popover-content
    //- hide list if build failed
    ul.popover-list
      li.popover-list-item(
        ng-if = "!CSBC.instance.isMigrating() && ['stopped', 'crashed'].includes(CSBC.instance.status())"
        ng-click = "actions.startInstance()"
      )
        .icons-status.green
        | Start

      li.popover-list-item(
        ng-if = "!CSBC.instance.isMigrating() && ['running'].includes(CSBC.instance.status())"
        ng-click = "actions.restartInstance()"
      )
        .icons-status.green
        | Restart

      li.popover-list-item(
        ng-if = "!CSBC.instance.isMigrating() && ['running'].includes(CSBC.instance.status())"
        ng-click = "actions.stopInstance()"
      )
        .icons-status
        | Stop

      li.divider(
        ng-if = "!CSBC.instance.isMigrating() && ['running', 'stopped', 'crashed'].includes(CSBC.instance.status())"
      )

      //- rebuild without cache when no new config exists for this container
      li.popover-list-item(
        ng-click = "actions.rebuildWithoutCache()"
        ng-if = "!(CSBC.instance.configStatusValid && !CSBC.instance.cachedConfigStatus)"
      )
        .icons-status.orange
        | Rebuild Without Cache

      //- rebuild and update config when a newer one exists
      li.popover-list-item(
        ng-click = "actions.updateConfigToMatchMaster()"
        ng-if = "CSBC.instance.configStatusValid && !CSBC.instance.cachedConfigStatus"
      )
        .icons-status.orange
        | Rebuild Without Cache

    .well.well-popover.orange.text-center(
      ng-if = "CSBC.instance.configStatusValid && !CSBC.instance.cachedConfigStatus"
    ) This containerâ€™s configuration has been changed. Rebuild to update.

    //- only show if the configuration has not been changed
    .well.well-popover.orange.text-center(
      ng-if = "['buildFailed', 'neverStarted'].includes(CSBC.instance.status()) && !(CSBC.instance.configStatusValid && !CSBC.instance.cachedConfigStatus)"
    ) Having build problems? Some errors can be resolved by rebuilding.
