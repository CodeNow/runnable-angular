.grid-block.shrink.aha-meter(
  ng-class = "{\
    'aha-meter-13': state.showSubStep === 0,\
    'aha-meter-25': state.showSubStep === 1,\
    'aha-meter-38': state.showSubStep === 2,\
    'aha-meter-50': state.showSubStep === 3,\
    'aha-meter-63': state.showSubStep === 4,\
    'aha-meter-75': state.showSubStep === 5,\
    'aha-meter-88': state.showSubStep === 6,\
    'aha-meter-100': $root.featureFlags.aha2 || $root.featureFlags.aha3\
  }"
)
  svg.iconnables
    use(
      ng-if = "$root.featureFlags.aha1 && (!$root.featureFlags.aha2 || !$root.featureFlags.aha3)"
      xlink:href = "#icons-octicons-repo"
    )
    use(
      ng-if = "$root.featureFlags.aha2 || $root.featureFlags.aha3"
      xlink:href = "#icons-check"
    )
.grid-block.vertical
  .grid-block(
    ng-if = "$root.canEditFeatureFlags()"
    style = "position: absolute; right: 12px; top: 6px;"
  )
    a.grid-content.shrink.red.small.link(
      ng-click = "state.showSubStep = state.showSubStep - 1"
    ) <
    a.grid-content.shrink.red.small.link(
      ng-click = "state.showSubStep = state.showSubStep + 1"
    ) >
  p.p.strong Add your First Repository
  p.p
    | {{state.showSubStep === 0 ? 'Add your repository by clicking ‘Add Configuration’.' : ''}}
    | {{state.showSubStep === 1 ? 'Select a repository to configure.' : ''}}
    | {{state.showSubStep === 2 ? 'How would you like to configure your repo?' : ''}}
    | {{state.showSubStep === 3 ? 'Give your repo a name.' : ''}}