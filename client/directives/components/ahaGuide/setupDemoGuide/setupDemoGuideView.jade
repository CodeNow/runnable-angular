ul.grid-block.vertical.list-fork(
  ng-if = "$root.featureFlags.demoMultiTier"
)
  li.grid-block.align-center.list-item-fork(
    data-event-name = "Clicked: Start Demo ({{stackKey}})"
    ng-click = "createDemo(stackKey)"
    ng-repeat = "(stackKey, demoStack) in demoStacks"
  )
    img.img(
      height = "24"
      ng-src = "{{demoStack.icon}}"
      width = "24"
    )
    .grid-block.vertical
      strong.strong {{demoStack.displayName}}
      small.small.weight-light {{demoStack.description}}
    svg.iconnables.icons-arrow-forward.anchor-right
      use(
        xlink:href = "#icons-arrow-down"
      )

ul.grid-block.align-center.list-fork(
  ng-class = "{\
    'grid-2': AMC.accountHasRepos,\
    'grid-3': !AMC.accountHasRepos\
  }"
  ng-if = "!$root.featureFlags.demoMultiTier"
)
  li.grid-block.vertical.align-center.list-item-fork
    img.img.margin-bottom-sm(
      height = "48"
      src = "/build/images/logos/logo-icon-nodejs.svg"
      width = "48"
    )
    button.btn.btn-sm.green(
      data-event-name = "Clicked: Start Demo (node.js)"
      ng-class = "{'loading': $root.isLoading.startDemoNodejs}"
      ng-click = "AMC.startDemo('nodejs')"
      ng-disabled = "$root.isLoading.startDemo"
    )
      span.span Start Demo
      .spinner-wrapper.spinner-sm.spinner-white.in(
        ng-if = "$root.isLoading.startDemoNodejs"
        ng-include = "'spinner'"
      )
    small.small.text-center.text-gray.margin-top-sm We’ll fork a node.js repo&#32;
      br.br
      | to your GitHub account.
  li.grid-block.vertical.align-center.list-item-fork
    img.img.margin-bottom-sm(
      height = "48"
      src = "/build/images/logos/logo-icon-python.svg"
      width = "48"
    )
    button.btn.btn-sm.green(
      data-event-name = "Clicked: Start Demo (Python)"
      ng-class = "{'loading': $root.isLoading.startDemoPython}"
      ng-click = "AMC.startDemo('python')"
      ng-disabled = "$root.isLoading.startDemo"
    )
      span.span Start Demo
      .spinner-wrapper.spinner-sm.spinner-white.in(
        ng-if = "$root.isLoading.startDemoPython"
        ng-include = "'spinner'"
      )
    small.small.text-center.text-gray.margin-top-sm We’ll fork a Python repo&#32;
      br.br
      | to your GitHub account.
  li.grid-block.vertical.align-center.list-item-fork
    img.img.margin-bottom-sm(
      height = "48"
      src = "/build/images/logos/logo-icon-ruby.svg"
      width = "48"
    )
    button.btn.btn-sm.green(
      data-event-name = "Clicked: Start Demo (Ruby)"
      ng-class = "{'loading': $root.isLoading.startDemoRuby}"
      ng-click = "AMC.startDemo('ruby')"
      ng-disabled = "$root.isLoading.startDemo"
    )
      span.span Start Demo
      .spinner-wrapper.spinner-sm.spinner-white.in(
        ng-if = "$root.isLoading.startDemoRuby"
        ng-include = "'spinner'"
      )
    small.small.text-center.text-gray.margin-top-sm We’ll fork a Ruby repo&#32;
      br.br
      | to your GitHub account.
  li.grid-block.vertical.align-center.list-item-fork(
    ng-if = "AMC.accountHasRepos"
  )
    img.img.margin-bottom-sm(
      height = "48"
      ng-src = "{{AMC.currentOrg.github.gravitar()}}"
      width = "48"
    )
    button.btn.btn-sm.white(
      data-event-name = "Clicked: Skip Demo/Use Existing Repos"
      ng-click = "AMC.addOwnRepo()"
      ng-disabled = "$root.isLoading.startDemo"
    ) Use Existing Repos
    small.small.text-center.text-gray.margin-top-sm Continue with the repos&#32;
      br.br
      | you already have (experienced users).
