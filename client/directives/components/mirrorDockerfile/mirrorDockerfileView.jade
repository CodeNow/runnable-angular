.spinner-wrapper.spinner-md.in(
  ng-if = "MDC.fromTool && $root.isLoading.mirrorDockerfile"
  ng-include = "'spinner'"
)

//- empty state
.grid-content.well.empty.gray(
  ng-if = "MDC.fromTool && !$root.isLoading.mirrorDockerfile && MDC.state.repo.dockerfiles.length === 0"
)
  p.p.text-center We couldn’t find a Dockerfile in this repository.

.grid-content.list.list-bordered(
  ng-if = "!MDC.fromTool && !$root.isLoading.mirrorDockerfile"
)
  //- add .disabled class to the not selected item if loading
  label.grid-block.list-item(
    ng-class = "{'active': MDC.state.dockerfile === false}"
    ng-disabled = "$root.isLoading[MDC.name + 'SingleRepo']"
  )
    svg.grid-content.shrink.iconnables.icons-dockerfile
      use(
        xlink:href = "#icons-file-new"
      )
    .grid-content Create a new configuration
    //- if there is only one, [check] by default
    input.checkbox(
      name = "dockerfile"
      ng-model = "MDC.state.dockerfile"
      type = "radio"
      ng-value = "false"
      ng-disabled = "$root.isLoading[MDC.name + 'SingleRepo']"
    )
    button.btn.btn-xs.btn-icon.btn-add
      svg.iconnables.icons-check
        use(
          xlink:href = "#icons-check"
        )

.grid-content.list.list-bordered(
  ng-if = "!$root.isLoading.mirrorDockerfile && MDC.state.repo.dockerfiles.length > 0"
)
  //- 'thisDockerfile' should be the name of the Dockerfile (ie. 'Dockerfile.prod', or 'Dockerfile.staging') to suppot multiple dockerfiles
  //- add .disabled class to the not selected item if loading
  label.grid-block.list-item(
    ng-class = "{'active': MDC.state.dockerfile === dockerfile}"
    ng-disabled = "$root.isLoading[MDC.name + 'SingleRepo']"
    ng-repeat = "dockerfile in MDC.state.repo.dockerfiles"
  )
    svg.grid-content.shrink.iconnables.icons-dockerfile
      use(
        xlink:href = "#icons-dockerfile"
      )
    .grid-content
      div {{ dockerfile.path }}
      a.small.link(
        ng-href = "{{ dockerfile.html_url }}"
        ng-if = "dockerfile.html_url"
        target = "_blank"
        ng-disabled = "$root.isLoading[MDC.name + 'SingleRepo']"
      ) View on GitHub
    //- if there is only one, [check] by default
    input.checkbox(
      name = "dockerfile"
      ng-model = "MDC.state.dockerfile"
      type = "radio"
      ng-value = "dockerfile"
    )
    button.btn.btn-xs.btn-icon.btn-add
      svg.iconnables.icons-check
        use(
          xlink:href = "#icons-check"
        )

small.grid-block.align-center.small.text-gray.padding-xxs(
  ng-hide = "MDC.fromTool && $root.isLoading.mirrorDockerfile"
  ng-class = "{'justify-center': MDC.fromTool}"
) Don’t see your Dockerfile?
  button.btn.btn-xs.white.btn-add-dockerfile(
    ng-click = "MDC.addDockerfileModal()"
    type = "button"
  ) Add Dockerfile…
