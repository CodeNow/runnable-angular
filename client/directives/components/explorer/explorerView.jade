//- on container sidebar
.grid-block.justify-right.sidebar-section-heading(
  ng-if = "!editExplorer || debugContainer"
  ng-include = "'explorerSectionHeading'"
)

//- on configure modal
.sidebar-actions(
  ng-controller = "FilePopoverController as FPC"
  ng-if = "editExplorer && rootDir && !instance.isMigrating()"
)
  button.btn.btn-xs.gray(
    ng-class = "{'active': filePopover.data.show}"
    ng-disabled = "readOnly"
    pop-over
    pop-over-actions = "FPC.actions"
    pop-over-data = "filePopover.data"
    pop-over-options = "{\"left\":-84,\"top\":35}"
    pop-over-template = "viewFileTreePopoverFileExplorerMenu"
    pop-over-active = "filePopover.data.show"
  )
    svg.iconnables.icons-add
      use(
        xlink:href = "#icons-add"
      )

.sidebar-section-content
  .well.text-center.padding-sm(
    ng-if = "!debugContainer && !editExplorer && !fileModel.running() || instance.isMigrating()"
  ) Your files are not available when the container isnâ€™t running.

  ul.file-tree(
    ng-if = "rootDir && (debugContainer || editExplorer || fileModel.running()) && !instance.isMigrating()"
  )
    //- this is the root dir; there can be only one.
    li(
      dir = "rootDir"
      edit-explorer = "editExplorer"
      file-model = "fileModel"
      file-tree-dir
      is-root-dir = "true"
      loading-promises-target = "loadingPromisesTarget"
      open-items = "openItems"
      parent-dir = "rootDir"
      read-only = "readOnly"
      show-repo-folder = "showRepoFolder"
      state = "state"
      get-display-name = "getDisplayName"
    )
