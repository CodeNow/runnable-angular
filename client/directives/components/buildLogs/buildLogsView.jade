.pre.build-log.js-animate(
  ng-class = "{\
    'build-log-toggle' : command.content.length,\
    'in': command.content.length > 0 && command.expanded\
  }"
  ng-repeat = "command in BLC.buildLogs"
)
  .build-log-header(
    ng-click = "actions.toggleCommand($event, command)"
    ng-class = "{'fixed': command.fixed, absolute: command.absolute}"
  )
    .build-log-header-text(
      ng-bind-html = "command.command"
    )

    .btn-group.btn-debug(
      ng-if = "$root.featureFlags.debugMode && command.imageId"
      ng-include = "'viewDebugButton'"
    )

  .build-log-content.js-animate(
    ng-bind-html = "command.trustedContent"
    ng-if = "command.expanded && command.content.length"
  )

  .spinner-wrapper.spinner-sm.spinner-white.in(
    ng-if = "BLC.buildLogsRunning && command.expanded"
    ng-include="'spinner'"
  )