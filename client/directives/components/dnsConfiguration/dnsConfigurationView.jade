button.js-btn-wrapper(
  ng-click = "DCC.lastModifiedDNS = null;"
  pop-over
  pop-over-controller = "DCC"
  pop-over-options = "{\"right\":-173,\"top\":45}"
  pop-over-template = "dnsConfigurationPopoverView"
)
  //- change text to 'Connection' if there is only one
  span.float-left
    {{$root.isLoaded.dns ? DCC.filteredDependencies.length : ''}}&#32;
    {{DCC.filteredDependencies.length === 1 ? 'Connection' : 'Connections'}}
  svg.iconnables.icons-arrow-down.float-right
    use(
      xlink:href = "#icons-arrow-down"
    )
