button.btn.btn-sm.white.text-overflow.btn-validate(
  ng-click = "actions.toggleSelect($event)"
)
  .placeholder.float-left(
    ng-if = "!value"
  ) {{placeholder}}
  .display.text-overflow.float-left(
    ng-if = "value"
  )
  svg.iconnables.icons-arrow-down(
    ng-if = "!spinnerFlag"
  )
    use(
      xmlns:xlink = "http://www.w3.org/1999/xlink"
      xlink:href = "#icons-arrow-down"
    )
  .spinner-wrapper.spinner-sm.in(
    ng-if = "spinnerFlag"
    ng-include = "'spinner'"
  )
