button.btn.btn-icon.blue(
  ng-class = "{active: EC.state.helpButton.active}"
  ng-click = "EC.state.helpButton.active = true"
  pop-over
  pop-over-active = "EC.state.helpButton.active"
  pop-over-options = "{\"left\":60}"
  pop-over-template = "viewHelpPopover"
  pop-over-trigger = "activeAttr"
  title = "Help Center"
)
  .help-badge(
    ng-if = "EC.helpCards.cards.triggered.length > 0"
  ) {{EC.helpCards.cards.triggered.length}}
  svg.iconnables
    use(
      xlink:href = "#icons-help"
      )

.help.help-top-card(
  ng-if = "!EC.state.helpButton.active && EC.helpCards.cards.triggered.length > 0 && !EC.helpCards.getActiveCard()"
)
  .help-lists-wrapper
    ul.triggered-help-list
      li.triggered-help-item.clearfix
        button.btn.btn-icon.btn-icon-xs(
          ng-click = "EC.helpPopover.actions.ignoreHelp(EC.helpCards.cards.triggered[0])"
        )
          svg.iconnables
            use(
              xlink:href = "#icons-close"
            )
        p.p(
          ng-bind-html = "EC.helpCards.cards.triggered[0].label"
        )
        button.btn.btn-sm(
          ng-click = "EC.helpPopover.actions.getHelp(EC.helpCards.cards.triggered[0])"
        ) Show Me
  button.btn(
    ng-click = "EC.state.helpButton.active = true"
  ) More Help
    svg.iconnables
      use(
        xlink:href = "#icons-arrow-down"
      )

//- new server button
button.btn.green(
  ng-class = "{ hint: EC.helpCards.getActiveCard().targets.newContainer }"
  pop-over
  pop-over-options = "{\"right\":0,\"top\":56}"
  pop-over-template = "viewPopoverNewServer"
)
  svg.iconnables.icons-add.icons-round
    use(
      xlink:href = "#icons-add"
    )
  | New Container
  svg.iconnables.icons-arrow-down
    use(
      xlink:href = "#icons-arrow-down"
    )