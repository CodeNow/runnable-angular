.card.gray.disabled.load(
  ng-repeat = "server in state.newServers"
)
  .card-header
    svg.iconnables.icons-server.status-red(
      ng-class = "{\
        'status-green': data.statusGreen,\
        'status-orange': data.statusOrange,\
        'status-red': data.statusRed\
      }"
    )
      use.status-red(
        xlink:href = "#icons-status-red"
      )
      use.status-orange(
        xlink:href = "#icons-status-orange"
      )
      use.status-green(
        xlink:href = "#icons-status-green"
      )
    h2.h2.monospace {{ server.opts.name | filterCreateInstanceUrl: data.activeAccount }}
    //- h2.h2 {{ server.opts.name }}
    button.btn.btn-sm.btn-icon(
      ng-click = "data.revealBuildfiles = !data.revealBuildfiles"
      pop-over
      pop-over-actions = "actions"
      pop-over-data = "data"
      pop-over-options = "{\"left\":-138,\"top\":45}"
      pop-over-template = "viewPopoverServerActions"
    )
      svg.iconnables.icons-gear
        use(
          xlink:href = "#icons-gear"
        )
  ul.card-body
    li.btn.white(
      modal
      modal-actions = "actions"
      modal-current-model = "server"
      modal-data = "data"
      modal-state-model = "'buildfiles'"
      modal-template = "editServerModalOpen"
      ng-show = "data.revealBuildfiles"
    )
      svg.iconnables.icons-terminal
        use(
          xlink:href = "#icons-terminal"
        )
      h3.h3 Build Files
      p.p No errors
      svg.iconnables.icons-arrow-down
        use(
          xlink:href = "#icons-arrow-down"
        )
    li.btn.white(
      modal
      modal-actions = "actions"
      modal-current-model = "server"
      modal-data = "data"
      modal-state-model = "'stack'"
      modal-template = "editServerModalOpen"
      ng-hide = "data.revealBuildfiles"
    )
      svg.iconnables.icons-terminal
        use(
          xlink:href = "#icons-terminal"
        )
      h3.h3 Stack
      p.p {{ server.selectedStack.name }} v{{ server.selectedVersion }}
      svg.iconnables.icons-arrow-down
        use(
          xlink:href = "#icons-arrow-down"
        )
    li.btn.white(
      modal
      modal-actions = "actions"
      modal-current-model = "server"
      modal-data = "data"
      modal-state-model = "'command'"
      modal-template = "editServerModalOpen"
      ng-hide = "data.revealBuildfiles"
    )
      svg.iconnables.icons-terminal
        use(
          xlink:href = "#icons-terminal"
        )
      h3.h3 Start Command
      p.p {{ server.startCommand }}
      svg.iconnables.icons-arrow-down
        use(
          xlink:href = "#icons-arrow-down"
        )
    li.btn.white(
      modal
      modal-actions = "actions"
      modal-current-model = "server"
      modal-data = "data"
      modal-state-model = "'ports'"
      modal-template = "editServerModalOpen"
      ng-hide = "data.revealBuildfiles"
    )
      svg.iconnables.icons-terminal
        use(
          xlink:href = "#icons-terminal"
        )
      h3.h3 Ports
      p.p {{ (server.ports.length ) ? server.ports.join(', ') : 'None' }}
      svg.iconnables.icons-arrow-down
        use(
          xlink:href = "#icons-arrow-down"
        )
    li.btn.white(
      modal
      modal-actions = "actions"
      modal-current-model = "server"
      modal-data = "data"
      modal-state-model = "'env'"
      modal-template = "editServerModalOpen"
    )
      svg.iconnables.icons-terminal
        use(
          xlink:href = "#icons-terminal"
        )
      h3.h3 Environment Variables
      p.p none defined
      svg.iconnables.icons-arrow-down
        use(
          xlink:href = "#icons-arrow-down"
        )