.card.gray.disabled.load(
  modal
  modal-actions = "actions"
  modal-current-model = "server"
  modal-data = "data"
  modal-disable-click = "true"
  modal-open-flag = "server.openEditOnStep"
  modal-state-model = "server.openEditOnStep"
  modal-template = "editServerModalOpen"
  ng-repeat = "server in state.newServers"
)
  .card-header
    svg.iconnables.icons-server.status-red(
      ng-class = "{\
        'status-green': data.statusGreen,\
        'status-orange': data.statusOrange,\
        'status-red': data.statusRed\
      }"
    )
      use.status-red(
        xlink:href = "#icons-status-red"
      )
      use.status-orange(
        xlink:href = "#icons-status-orange"
      )
      use.status-green(
        xlink:href = "#icons-status-green"
      )
    h2.h2 {{ server.opts.name }}
    p.p {{ server.opts.name | filterCreateInstanceUrl: data.activeAccount }}
  ul.card-body
    li.btn.white(
      ng-click = "server.openEditOnStep = 'stack'"
    )
      h3.h3
        svg.iconnables.icons-terminal
          use(
            xlink:href = "#icons-terminal"
          )
        | Stack
      p.p {{ server.selectedStack }} v{{ server.selectedVersion }}
      svg.iconnables.icons-arrow-down
        use(
          xlink:href = "#icons-arrow-down"
        )
    li.btn.white(
      ng-click = "server.openEditOnStep = 'command'"
    )
      h3.h3
        svg.iconnables.icons-terminal
          use(
            xlink:href = "#icons-terminal"
          )
        | Start Command
      p.p {{ server.startCommand }}
      svg.iconnables.icons-arrow-down
        use(
          xlink:href = "#icons-arrow-down"
        )
    li.btn.white(
      ng-click = "server.openEditOnStep = 'ports'"
    )
      h3.h3
        svg.iconnables.icons-terminal
          use(
            xlink:href = "#icons-terminal"
          )
        | Ports
      p.p {{ (server.ports.length ) ? server.ports.join(',') : 'None' }}
      svg.iconnables.icons-arrow-down
        use(
          xlink:href = "#icons-arrow-down"
        )
    li.btn.white(
      ng-click = "server.openEditOnStep = 'env'"
    )
      h3.h3
        svg.iconnables.icons-terminal
          use(
            xlink:href = "#icons-terminal"
          )
        | Environment Variables
      p.p none defined
      svg.iconnables.icons-arrow-down
        use(
          xlink:href = "#icons-arrow-down"
        )
