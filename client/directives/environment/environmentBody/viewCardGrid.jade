//- spinner
.card.gray.disabled.load.empty(
  ng-class = "{'deprecated': !$root.featureFlags.cardStatus}"
  ng-if = "!data.instances || $root.isLoading.sidebar"
)
  .spinner-wrapper.spinner-md.spinner-gray.in(
    ng-include = "'spinner'"
  )

//- empty state
.card.gray.disabled.load.empty(
  ng-class = "{'deprecated': !$root.featureFlags.cardStatus}"
  ng-if = "!$root.ahaGuide.ahaGuideToggles.showAha1 && !$root.isLoading.sidebar && data.instances && !data.instances.models.length"
)
  svg.iconnables(
    ng-click = "EC.triggerModal.newContainer()"
  )
    use(
      xlink:href = "#icons-new-repository-server"
    )
  p.p Add your first repository template to get started.

//- server card
.card.gray.disabled.load(
  actions = "actions"
  data = "data"
  help-card = "state.helpCard"
  instance = "instance"
  ng-class = "{\
    'deprecated': !$root.featureFlags.cardStatus,\
    'focus': instance.attrs.name === $state.params.instanceName\
  }"
  ng-repeat = "instance in data.instances.models | orderBy:'attrs.name' track by instance.attrs.name"
  server-card
)
