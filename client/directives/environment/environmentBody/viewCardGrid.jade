//- spinner
.card.gray.disabled.load.empty(
  ng-if = "!data.instances || $root.isLoading.sidebar"
)
  .spinner-wrapper.spinner-md.spinner-gray.in(
    ng-include = "'spinner'"
  )

//- empty state
.card.gray.disabled.load.empty(
  ng-if = "data.instances && !isLoading.sidebar && !data.instances.models.length"
) Add a new container to get started. Need help?
  a.link(
    href = "https://youtu.be/_uwPKIH990E"
    target = "_blank"
  ) View our Getting Started video

//- server card
.card.gray.disabled.load(
  actions = "actions"
  data = "data"
  help-card = "state.helpCard"
  instance = "instance"
  ng-class = "{focus: instance.attrs.name === $state.params.instanceName}"
  ng-repeat = "instance in data.instances.models | orderBy:'attrs.name' track by instance.attrs.name"
  server-card
)
