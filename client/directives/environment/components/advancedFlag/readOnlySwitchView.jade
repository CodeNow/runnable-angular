input.toggle-input(
  ng-disabled = "!ROSC.state.repo || (!ROSC.state.instance.attrs.lastBuiltSimpleContextVersion && ROSC.state.advanced)"
  ng-model = "ROSC.readOnly"
  ng-model-options = "{getterSetter: true}"
  type = "checkbox"
)
.toggle-group.toggle-sm(
  pop-over
  pop-over-actions = "ROSC.popover"
  pop-over-data = "ROSC.popover"
  pop-over-template = "lockDockerfilePopoverView"
  pop-over-trigger = "activeAttr"
  pop-over-active = "ROSC.popover.active"
)