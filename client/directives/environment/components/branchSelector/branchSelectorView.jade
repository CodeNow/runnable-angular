fancy-select(
  ng-disabled = "branchFetching"
  ng-required = "true"
  value = "state.branch"
  track-by = "attrs.name"
  spinner-flag = "branchFetching"
)
  li.list-item.popover-list-item.small Select {{ isInitial || 'initial' }} branch
  fancy-option(
    ng-repeat = "branch in $parent.state.repo.branches.models"
    value = "branch"
  )
    svg.iconnables.icons-branch
      use(
        xlink:href = "#icons-branch"
      )
    | {{ $parent.branch.attrs.name }}
  small.small.input-col(
    ng-if = "isInitial"
