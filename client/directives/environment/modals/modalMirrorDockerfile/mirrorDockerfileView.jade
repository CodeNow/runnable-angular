.spinner-wrapper.spinner-md.in(
  ng-if = "$root.isLoading[MC.name]"
  ng-include = "'spinner'"
)

//- empty state
.grid-content.well.in.empty(
  ng-if = "!$root.isLoading[MC.name] && MC.state.repo.dockerfiles.length === 0"
)
  p.p.text-center We couldnâ€™t find a Dockerfile in this repository.

.grid-content.row-xxs.list.list-bordered(
  ng-if = "!$root.isLoading[MC.name] && MC.state.repo.dockerfiles.length > 0"
)
  //- 'thisDockerfile' should be the name of the Dockerfile (ie. 'Dockerfile.prod', or 'Dockerfile.staging') to suppot multiple dockerfiles
  //- add .disabled class to the not selected item if loading
  label.grid-block.list-item.row-xxs(
    ng-class = "{'active': dockerfile.selection === 'thisDockerfile'}"
    ng-repeat = "dockerfile in MC.state.repo.dockerfiles"
  )
    svg.grid-content.shrink.iconnables.icons-dockerfile
      use(
        xlink:href = "#icons-dockerfile"
      )
    .grid-content
      .text-left Dockerfile
      a.small.link(
        href = "#"
        target = "_blank"
      ) View on GitHub
    //- if there is only one, [check] by default
    input.checkbox(
      name = "dockerfile"
      ng-model = "MC.state.dockerfile"
      type = "radio"
      ng-value = "dockerfile"
    )
    button.btn.btn-xs.btn-icon
      svg.iconnables.icons-check
        use(
          xlink:href = "#icons-check"
        )

.grid-content.row-xxs.list.list-bordered(
  ng-if = "!fromTool"
)
  //- add .disabled class to the not selected item if loading
  label.grid-block.list-item.row-xxs(
    ng-class = "{'active': MC.state.dockerfile === false}"
  )
    svg.grid-content.shrink.iconnables.icons-dockerfile
      use(
        xlink:href = "#icons-file-new"
      )
    .grid-content Create a new configuration
    //- if there is only one, [check] by default
    input.checkbox(
      name = "dockerfile"
      ng-model = "MC.state.dockerfile"
      type = "radio"
      ng-value = "false"
    )
    button.btn.btn-xs.btn-icon
      svg.iconnables.icons-check
        use(
          xlink:href = "#icons-check"
        )
