.grid-content.row-xxs.list.list-bordered
  //- add .disabled class if loading
  label.grid-block.list-item.row-xxs(
    ng-class = "{'active': dockerfile.selection === 'ansible/docker-files/base/Dockerfile'}"
  )
    svg.grid-content.shrink.iconnables.icons-dockerfile
      use(
        xlink:href = "#icons-dockerfile"
      )
    .grid-content
      .text-left.text-overflow(
        title = "ansible/docker-files/base/Dockerfile"
      ) ansible/docker-files/base/Dockerfile
      a.small.link(
        href = "#"
        target = "_blank"
      ) View on Github
    //- if there is only one, [check] by default
    input.checkbox(
      name = "dockerfile"
      ng-model = "dockerfile.selection"
      type = "radio"
      value = "ansible/docker-files/base/Dockerfile"
    )
    button.btn.btn-xs.btn-icon
      svg.iconnables.icons-check
        use(
          xlink:href = "#icons-check"
        )

