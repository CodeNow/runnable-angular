.modal-dialog
  header.modal-header
    h1.modal-heading New Non-Repository Container
    svg.iconnables.icons-close(
      ng-click = "defaultActions.cancel()"
    )
      use(
        xlink:href = "#icons-close"
      )

  section.modal-body
    .spinner-wrapper.spinner-md.in(
      ng-if = "!data.allDependencies.models"
      ng-include = "'spinner'"
    )

    ul.list.list-servers.list-tiled
      li.list-item(
        ng-click = "addServerFromTemplate(dependency)"
        ng-repeat = "\
          dependency in data.allDependencies.models | \
          removeTemplateInstances | \
          orderBy:'attrs.name'\
        "
      )
        img.img(
          height = "36"
          ng-src = "/build/images/logos/logo-icon-{{dependency.attrs.name.toLowerCase()}}.png"
          width = "36"
        )
        | {{dependency.attrs.name}}