.popover-overlay
  .popover.popover-fixed.in.modal-mirror-dockerfile(
    ng-class = "{'in': active}"
  )
    .popover-header Choose Dockerfile
      svg.iconnables.icons-close(
        ng-click = "MC.cancel()"
      )
        use(
          xlink:href = "#icons-close"
        )

    .grid-block.vertical.modal-body(
      branch-name = "MC.branchName"
      from-tool = "true"
      mirror-dockerfile
      name = "MC.name"
      repo = "MC.state.repo"
      state = "MC.state"
    )
    footer.modal-footer.clearfix
      button.btn.btn-md.white.float-left(
        ng-click = "MC.cancel()"
      ) Cancel
      button.btn.btn-md.green.float-right(
        ng-click = "MC.confirm(MC.state.dockerfile)"
        ng-disabled = "!MC.state.dockerfile"
      )
        //- .spinner-wrapper.spinner-white.spinner-sm.in(
        //-   ng-include = "'spinner'"
        //- )
        span Start Mirroring
