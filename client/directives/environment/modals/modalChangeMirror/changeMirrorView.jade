.popover-overlay
  .popover.popover-fixed.in(
    ng-class = "{'in': active}"
  )
    .popover-header Choose Dockerfile
      svg.iconnables.icons-close(
        ng-click = "MC.cancel()"
      )
        use(
          xlink:href = "#icons-close"
        )

    .grid-block.vertical.modal-body.views-dockerfile-setup(
      branch-name = "MC.branchName"
      from-tool = "true"
      mirror-dockerfile
      name = "MC.name"
      ng-init = "MC.state.configurationMethod = 'dockerfile'"
      repo = "MC.state.repo"
      state = "MC.state"
    )

    footer.modal-footer.clearfix
      button.btn.btn-md.white.float-left(
        ng-click = "MC.cancel()"
      ) Cancel
      button.btn.btn-md.green.float-right(
        ng-click = "MC.confirm(MC.state.dockerfile)"
        ng-disabled = "!MC.state.dockerfile"
      ) Start Mirroring
