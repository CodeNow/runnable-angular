//-
//- start $root.featureFlags.dockerfileMirroring
//-

.spinner-wrapper.spinner-md.in(
  ng-if = "!NCMC.state.addRepoTab && $root.featureFlags.dockerfileMirroring && NCMC.state.loadingTemplates"
  ng-include = "'spinner'"
)

.grid-block.justify-right.list-header.row-xxs(
  ng-if = "$root.featureFlags.dockerfileMirroring && !NCMD.state.addRepoTab && !NCMD.state.loadingTemplates"
)
  //- search
    - disable while loading
  input.input.input-xs.input-search(
    autofocus
    ng-model = "NCMC.serviceFilter"
    ng-disabled = ""
    placeholder = "Search"
    required
    type = "search"
  )

ul.list.list-servers(
  ng-if = "!NCMC.state.addRepoTab && $root.featureFlags.dockerfileMirroring && !NCMC.state.loadingTemplates"
)
  //- ng-class = "{'btn-hint': dependency.attrs.lowerName === STMC.helpCard.data.dependency}"

  li.list-item.grid-block.row-xxs(
    ng-click = "NCMC.addServerFromTemplate(dependency)"
    ng-repeat = "\
      dependency in NCMC.templateServers.models | \
      removeTemplateInstances | \
      repos: NCMC.serviceFilter | \
      orderBy:'attrs.name'\
    "
  )
    img.img(
      height = "36"
      ng-src = "/build/images/logos/logo-icon-{{dependency.attrs.name.toLowerCase()}}.png"
      width = "36"
    )
    | {{dependency.attrs.name}}
    button.btn.btn-sm.btn-icon
      svg.iconnables.icons-add
        use(
          xlink:href = "#icons-add"
        )
//-
//- end $root.featureFlags.dockerfileMirroring
//-
