.popover.popover-fixed.popover-rules(
  ng-class = "{in: active}"
  ng-style = "popoverStyle.getStyle()"
)
  .popover-content

    //- if new rule
    h3.popover-title(
      ng-if = "true"
    ) New Filename Replace Rule
      small.small üê∂ Rules are case-sensitive and trailing whitespace is not trimmed. Regular expressions are not supported.

    //- if existing rule
    h3.popover-title(
      ng-if = "false"
    ) Filename Replace Rule
      small.small üê∂ Rules are case-sensitive and trailing whitespace is not trimmed. Regular expressions are not supported.
      button.btn.btn-xs.gray(
        ng-if = ""
      )
        svg.iconnables.icons-trash
          use(
            xlink:href = "#icons-trash"
          )
        | Delete Rule

    .label-row
      label.label-col Source
        input.input.input-sm.monospace(
          spellcheck = "false"
        )
      .span-col ‚Üí
      label.label-col Destination
        input.input.input-sm.monospace(
          spellcheck = "false"
        )

    small.small.table-details(
      ng-if = "data.saving"
    ) 1 match (excludes ignored files)

    //- filename verification table
    .table.table-diff(
      ng-if = "data.saving"
      ng-include = "'viewRuleFilename'"
    )

  .popover-footer.clearfix
    button.btn.green.btn-spinner(
      ng-class = "{in: data.saving}"
      ng-click = "data.saving = true"
      ng-disabled = "data.saving"
    )
      //- spinner
      .spinner-wrapper.spinner-sm.spinner-white.in(
        ng-if = "data.saving"
        ng-include = "'spinner'"
      )
      span(
        ng-if = "!data.saving"
      ) Search for matches
      span(
        ng-if = "data.saving"
      ) Searching
    button.btn.green(
      ng-if = "data.searched"
    ) Create rule
    button.btn.gray.btn-cancel Cancel