.popover.popover-fixed.popover-files(
  ng-class = "{in: active}"
  ng-style = "popoverStyle.getStyle()"
)
  .popover-header
    svg.iconnables
      use(
        xlink:href = "#icons-git-repository"
      )
    input.input.input-sm(
      placeholder = "repository"
    )
    a.btn.btn-xs Delete

  .popover-content
    label.label.clearfix
      .label-col Destination
      .input-col
        input.input.input-sm

    label.label.clearfix
      .label-col Build Commands
      .input-col
        textarea.textarea.monospace

  .popover-footer.clearfix
    button.btn.green.btn-spinner(
      ng-class = "{in: data.saving}"
      ng-click = "data.saving = true"
      ng-disabled = "data.saving"
    )
      //- spinner
      .spinner-wrapper.spinner-sm.spinner-white.in(
        ng-if = "data.saving"
        ng-include = "'spinner'"
      )
      span(
        ng-if = "!data.saving"
      ) Add File
      span(
        ng-if = "data.saving"
      ) Uploading
    button.btn.green(
      ng-if = "data.searched"
    ) Create rule
    button.btn.gray.btn-cancel Cancel