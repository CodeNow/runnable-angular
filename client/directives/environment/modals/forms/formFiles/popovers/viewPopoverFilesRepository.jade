.popover.popover-fixed.popover-files(
  ng-class = "{in: active}"
  ng-style = "popoverStyle.getStyle()"
)
  .popover-header
    svg.iconnables
      use(
        xlink:href = "#icons-git-repository"
      )
    label.btn.btn-sm.btn-select.white(
      for = "select-repository"
    ) Choose repository
      svg.iconnables.icons-arrow-down
        use(
          xlink:href = "#icons-arrow-down"
        )
      //- exclude main repository
      select#select-repository(
        required
      )
        option(
          disabled
        ) Choose repository
        option repo1
        option repo2
        option repo3
    a.btn.btn-sm.orange Delete

  .popover-content
    label.label.clearfix
      .label-col Destination
      .input-col
        input.input.input-sm(
          placeholder = "required"
          required
        )

    label.label.clearfix
      .label-col Build Commands
      .input-col
        textarea.textarea.monospace

  .popover-footer.clearfix
    button.btn.green.btn-spinner(
      ng-class = "{in: data.saving}"
      ng-click = "data.saving = true"
      ng-disabled = "data.saving"
    )
      //- spinner
      .spinner-wrapper.spinner-sm.spinner-white.in(
        ng-if = "data.saving"
        ng-include = "'spinner'"
      )
      span(
        ng-if = "!data.saving"
      ) Add File
      span(
        ng-if = "data.saving"
      ) Uploading
    button.btn.green(
      ng-if = "data.searched"
    ) Create rule
    button.btn.gray.btn-cancel Cancel