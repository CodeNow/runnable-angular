.tr.thead.thead-sm.clearfix
  .cell.cell-action
    svg.iconnables
  .cell Name
  .cell.cell-type Type
//- main repo is not actionable
ul.table-drag-drop(
  dnd-list = "state.containerFiles"
  dnd-drop = "dropContainerFile(event, index, item, type)"
)
  li.tr.tr-action.multi-line.clearfix(
    dnd-draggable = "containerFile.id"
    dnd-dragstart = "actions.dragstart()"
    dnd-effect-allowed = "move"
    ng-repeat = "containerFile in state.containerFiles"
  )
    .cell.cell-action(
      ng-class = "{\
        disabled: state.containerFiles.length < 2,\
        'no-touching': state.containerFiles.length < 2\
      }"
      dnd-handle
    )
      svg.iconnables.icons-drag
        use(
          xlink:href = "#icons-drag"
        )
    .cell.text-overflow(
      ng-if = "containerFile.type === 'Container File'"
      pop-over
      pop-over-actions = "fileUpload.actions"
      pop-over-data = "containerFile"
      pop-over-template = "viewPopoverFilesUpload"
      title = "{{ containerFile.name }}"
    ) {{ containerFile.name }}
      small.small(
        title = "{{ containerFile.path }}"
      ) {{ containerFile.path }}
    .cell.text-overflow(
      ng-if = "containerFile.type === 'Repo' || containerFile.type === 'Main Repo'"
      ng-click = "containerFile.type === 'Main Repo' || triggerEditRepo(containerFile)"
      title = "{{ containerFile.name }}"
    ) {{ containerFile.name }}
      small.small(
        title = "{{ containerFile.path }}"
      ) {{ containerFile.path }}
    .cell.cell-type.small
      svg.iconnables(
        ng-if = "containerFile.type === 'Container File'"
      )
        use(
          xlink:href = "#icons-file"
        )
      svg.iconnables(
        ng-if = "containerFile.type === 'Main Repo'"
      )
        use(
          xlink:href = "#icons-repository"
        )
      svg.iconnables(
          ng-if = "containerFile.type === 'Repo'"
        )
        use(
          xlink:href = "#icons-repository-additional"
        )
      | {{ containerFile.type }}
