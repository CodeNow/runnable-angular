.tr.thead.thead-sm.clearfix
  .cell.cell-action
    svg.iconnables
  .cell Name
  .cell.cell-type Type
//- main repo is not actionable
div(
  dnd-list = "server.containerFiles"
)
  .tr.tr-action.multi-line.clearfix
    .cell.cell-action
      svg.iconnables.icons-drag
        use(
          xlink:href = "#icons-drag"
        )
    .cell.text-overflow(
      title = "{{ server.instance.attrs.name }}"
    ) {{ server.instance.attrs.name }}
      small.small(
        title = "path/to/thing"
      ) path/to/thing
    .cell.cell-type.small
      svg.iconnables.icons-server
        use(
          xlink:href = "#icons-server"
        )
      | Main Repository
  .tr.multi-line.disabled.clearfix(
    ng-repeat = "containerFile in server.containerFiles"
  )
    .cell.cell-action
      svg.iconnables.icons-drag
        use(
          xlink:href = "#icons-drag"
        )
    .cell.text-overflow(
      title = "{{ containerFile.name }}"
    ) {{ containerFile.name }}
      small.small(
        title = "{{ containerFile.path }}"
      ) {{ containerFile.path }}
    .cell.cell-type.small
      svg.iconnables.icons-server
        use(
          xlink:href = "#icons-server"
        )
      | {{ containerFile.type }}
