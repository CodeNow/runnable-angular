.help-container(
  ng-if = "helpCards.getActiveCard().helpPopover.containerFiles"
)
  .help(
    ng-bind-html = "helpCards.getActiveCard().helpPopover.containerFiles"
  )

.hidden(
  pop-over
  pop-over-active = "CCF.repositoryPopover.active"
  pop-over-actions = "CCF.repositoryPopover.actions"
  pop-over-data = "CCF.repositoryPopover.data"
  pop-over-template = "viewPopoverFilesRepository"
  pop-over-trigger = "activeAttr"
)

.hidden(
  pop-over
  pop-over-actions = "CCF.fileUpload.actions"
  pop-over-data = "CCF.fileUpload.data"
  pop-over-template = "viewPopoverFilesUpload"
  pop-over-active = "CCF.fileUpload.active"
  pop-over-trigger = "activeAttr"
)

.hidden(
  pop-over
  pop-over-template = "viewPopoverSshKey"
  pop-over-active = "CCF.sshKey.popover.active"
  pop-over-actions = "CCF.sshKey.popover.actions"
  pop-over-trigger = "activeAttr"
)

.clearfix
  .label-col {{ $root.featureFlags.sshKeys ? "Files & SSH Keys" : "Container Files" }}
  .input-col
    button.btn.btn-xs.white.float-right(
      ng-if = "$root.featureFlags.sshKeys"
      pop-over
      pop-over-options = "{\"right\":0,\"top\":35}"
      pop-over-template = "viewPopoverAddFile"
      pop-over-actions = "CCF.actions"
    ) Addâ€¦
      svg.iconnables.icons-arrow-down
        use(
          xlink:href = "#icons-arrow-down"
        )
    button.btn.btn-xs.white.float-right(
      ng-click = "CCF.actions.triggerAddRepository()"
      ng-if = "!$root.featureFlags.sshKeys"
    ) Add Repository
    button.btn.btn-xs.white.float-right(
      ng-click = "CCF.actions.triggerUploadFile()"
      ng-if = "!$root.featureFlags.sshKeys"
    ) Upload File

.table(
  ng-include = "'viewFormFilesTable'"
)

.label
