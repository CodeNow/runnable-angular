.clearfix
  .label-col Environment Variables
  .input-col.btn-group
    button.btn.btn-xs.green(
      pop-over
      pop-over-actions = "popoverEnvironmentVariable.actions"
      pop-over-active = "popoverEnvironmentVariable.data.show"
      pop-over-data = "popoverEnvironmentVariable.data"
      pop-over-options = "{\"top\":-72}"
      pop-over-template = "viewPopoverEnvironmentVariable"
    ) New Variable
    button.btn.btn-xs.btn-icon.green
      svg.iconnables.icons-arrow-down
        use(
          xlink:href = "#icons-arrow-down"
        )

//- table of current environment variables
.table
  //- table row header
  .tr.thead.clearfix
    .cell Key
    .cell Value
    .cell.cell-actions
  //- row 1
  .tr.clearfix
    .cell thing1
    .cell thing2
    .cell.cell-actions
      button.btn.btn-xs.gray(
        type = "button"
      ) Edit
  //- row 2
  .tr.clearfix
    .cell kim
    .cell k
    .cell.cell-actions
      button.btn.btn-xs.gray(
        type = "button"
      ) Edit
  //- row 3
  .tr.clearfix
    .cell cookie
    .cell lyon
    .cell.cell-actions
      button.btn.btn-xs.gray(
        type = "button"
      ) Edit

