.popover.in.menu.top(
  ng-class = "{in: active}"
  ng-style = "popoverStyle.getStyle()"
)
  .arrow.white
  .popover-content
    ul.popover-list
      li.list-item.popover-list-item.small(
        ng-if = "data.servers.length"
      ) Linked servers (by line)
      li.list-item.popover-list-item.monospace.text-overflow(
        ng-repeat = "link in data.servers"
      )
        button.btn.btn-xxs.gray(
          ng-attr-title = "Go to line {{ link.line }}"
        ) L {{ link.line }}
        | {{ link.url }}
      li.list-item.popover-list-item.divider(
        ng-if = "data.others.length && data.servers.length"
      )
      li.list-item.popover-list-item.small(
        ng-if = "data.others.length"
      ) Other links
      li.list-item.popover-list-item.monospace.text-overflow(
        ng-repeat = "link in data.others"
      )
        button.btn.btn-xxs.gray(
        ng-attr-title = "Go to line {{ link.line }}"
        ) L {{ link.line }}
        | {{ link.url }}