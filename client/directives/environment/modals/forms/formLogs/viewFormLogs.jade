//- tabs
.btn-group.btn-toggle.btn-toggle-xs(
  ng-hide = "$root.featureFlags.fullScreen"
  ng-init = "page = (['building', 'buildFailed', 'neverStarted'].indexOf(instance.status()) === -1) ? 'run' : 'build'"
)
  button.btn.btn-xs.white(
    ng-class = "{active: page === 'build'}"
    ng-click = "page = 'build'"
  ) Build Logs
  button.btn.btn-xs.white(
    ng-disabled = "!instance.containers.models.length"
    ng-class = "{active: page === 'run'}"
    ng-click = "page = 'run'"
  ) CMD Logs

//- logs
pre.pre.log-wrapper(
  ng-class = "{\
    'logs-runnable-dark': !$root.featureFlags.imAfraidOfTheDark,\
    'logs-runnable-light': $root.featureFlags.imAfraidOfTheDark\
  }"
)
  .term-js.term-log(
    log-term
    ng-controller = "BuildLogController"
    ng-if = "!$root.featureFlags.updatedBuildLogs"
    ng-show = "page === 'build'"
  )
  .build-log-wrapper(
    ng-include = "'viewBuildLogs'"
    ng-if = "$root.featureFlags.updatedBuildLogs"
    ng-show = "page === 'build'"
    ng-style = "($root.featureFlags.themeToggle || $root.featureFlags.fullScreenToggle) && {'padding-right': '42px'}"
  )
  .term-js.term-log(
    log-term
    ng-controller = "BoxLogController"
    ng-if = "instance.containers.models.length"
    ng-show = "page === 'run'"
  )

  .floating-controls(
    ng-include = "'viewFloatingControls'"
  )