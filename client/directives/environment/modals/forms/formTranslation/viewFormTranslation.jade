.help-container(
  ng-if = "helpCards.getActiveCard().helpPopover.findAndReplace"
)
  .help(
    ng-bind-html = "helpCards.getActiveCard().helpPopover.findAndReplace"
  )

.btn-group(
  ng-init = "page = 'rules'"
)
  button.btn.btn-xs.white.active(
    ng-class = "{active: page === 'rules'}"
    ng-click = "page = 'rules'"
  ) Rules
  button.btn.btn-xs.white(
    ng-class = "{active: page === 'ignored'}"
    ng-click = "page = 'ignored'"
  ) Ignored Files
  button.btn.btn-xs.white(
    ng-disabled = "\
      !state.contextVersion.getMainAppCodeVersion().attrs.transformRules.replace.length && \
      !state.contextVersion.getMainAppCodeVersion().attrs.transformRules.rename.length\
    "
    ng-class = "{active: page === 'preview'}"
    ng-click = "page = 'preview'"
  ) Preview All

div(
  ng-include = "'translationRulesTableForm'"
  ng-show = "page === 'rules'"
)

div(
  actions = "actions"
  ignored-translation
  ng-show = "page === 'ignored'"
  state = "state"
)

div(
  ng-include = "'previewAllTranslationView'"
  ng-show = "page === 'preview'"
)