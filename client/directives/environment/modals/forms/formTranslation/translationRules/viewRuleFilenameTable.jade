.tr.thead.clearfix
  .cell Filenames
    button.btn.btn-xs.white(
      pop-over
      pop-over-actions = "actions"
      pop-over-data = "data"
      pop-over-options = "{\"left\":0,\"top\":0}"
      pop-over-template = "viewPopoverFilenameRule"
    ) New filename rule

//- if no rules of this type
.tr.tr-empty.clearfix(
  ng-if = ""
)
  .cell (empty)

.tr.tr-action.clearfix
  //- hide drag if there is only one rule of that type
    - .disabled will hide the action visually
    - .no-touching will stop pointer events
  .cell.cell-action.disabled.no-touching(
    ng-class = "{\
      disabled: ifOnlyRuleOfType,\
      'no-touching': ifOnlyRuleOfType\
    "
  )
    svg.iconnables.icons-drag
      use(
        xlink:href = "#icons-drag"
      )
  .cell.monospace.text-overflow.cell-arrow(
    ng-class = "{disabled: noWarning}"
    title = "./client/assets/js/primus-client.js"
  ) primus-client.js
  .cell.monospace.text-overflow(
    title = "./client/assets/js/primus-client-prod.js"
  ) primus-client-prod.js
  //- add .disabled if no warning
  .cell.cell-action.monospace.disabled(
    ng-class = "{disabled: noWarning}"
  )
    //- note: the title attribute
    svg.iconnables.icons-warning(
      title = "0 filenames replaced"
    )
      use(
        xlink:href = "#icons-warning"
      )