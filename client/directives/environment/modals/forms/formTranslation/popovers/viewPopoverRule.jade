.popover.popover-fixed(
  ng-class = "{in: active}"
  ng-style = "popoverStyle.getStyle()"
)
  .popover-content

    //- if new filename
    h3.popover-title(
      ng-if = "false"
    ) New Filename Replace Rule
    //- if filename that exists
    h3.popover-title(
      ng-if = "false"
    ) Filename Replace Rule
    //- if string
    h3.popover-title(
      ng-if = "true"
    ) New String Replace Rule
      //- if existing rule
      button.btn.btn-xs.gray(
        ng-if = ""
      )
        svg.iconnables.icons-trash
          use(
            xlink:href = "#icons-trash"
          )
        | Delete Rule
      small.small Rules are case-sensitive and trailing whitespace is not trimmed.
        br
        | Regular expressions are not supported.
    //- if string that exists
    h3.popover-title(
      ng-if = "false"
    ) String Replace Rule

    .label-row
      label.label-col Find
        input.input.input-sm.monospace(
          spellcheck = "false"
        )
      .span-col â†’
      label.label-col Replace
        input.input.input-sm.monospace(
          spellcheck = "false"
        )

    small.small.table-details(
      ng-if = "data.saving"
    ) 2 matches in 1 file

    //- string verification table
    .table.table-diff(
      ng-if = "data.saving"
      ng-include = "'viewRuleMatches'"
    )

  .popover-footer.clearfix
    button.btn.green.btn-spinner(
      ng-class = "{in: data.saving}"
      ng-click = "data.saving = true"
      ng-disabled = "data.saving"
    )
      //- spinner
      .spinner-wrapper.spinner-sm.spinner-white.in(
        ng-if = "data.saving"
        ng-include = "'spinner'"
      )
      span(
        ng-if = "!data.saving"
      ) Search for matches
      span(
        ng-if = "data.saving"
      ) Searching
    button.btn.green(
      ng-if = "data.searched"
    ) Create rule
    button.btn.gray.btn-cancel Cancel