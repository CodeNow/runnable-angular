.clearfix
  .label-col Build Files

//- table of current environment variables
.ace-container.ace-build-files
  section.sidebar
    section.row.explorer(
      explorer
      file-model = "state.contextVersion"
      open-items = "openItems"
      root-dir = "state.contextVersion.rootDir"
      show-repo-folder = "true"
      explorer-title = "Build Files"
      edit-explorer = "true"
    )
  //- editor
  section.views(
    active-panel
    build = "state.build"
    ng-class = "{in: (data.showExplorer && !data.loading)}"
    open-items = "openItems"
    state-model = "state"
    use-auto-update = "true"
    validation = "validation"
    is-edit-modal = "isEditModal"
    hide-tab-bar = "true"
  )

small.small 😌🐻✌️ #{''}
  a.link(
    href = "//google.com"
    target = "_blank"
  ) More about build files