.popover.menu.bottom(
  ng-class = "{in: active}"
  ng-style = "popoverStyle.getStyle()"
  style = "transform-origin: 90% 0"
)
  .arrow.white(
    style = "left: auto; right: 3px"
  )
  .popover-content
    ul.popover-list
      //- edit is not allowed on ssh keys
      li.list-item.popover-list-item(
        ng-click = "actions.edit(data)"
      )
        svg.iconnables
          use(
            xlink:href = "#icons-edit"
          )
        | Edit
      li.divider(
        ng-if = "data.type !== 'SSH Key'"
      )
      li.list-item.popover-list-item(
        ng-if = "data.type !== 'SSH Key'"
        ng-click = "actions.delete(data)"
      )
        svg.iconnables
          use(
            xlink:href = "#icons-delete"
          )
        | Delete