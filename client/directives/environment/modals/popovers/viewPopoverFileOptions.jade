.popover.menu.bottom(
  ng-class = "{in: active}"
  ng-style = "popoverStyle.getStyle()"
  style = "transform-origin: 90% 0"
)
  .arrow.white(
    style = "left: auto; right: 3px"
  )
  .popover-content
    ul.popover-list
      //- edit is not allowed on ssh keys
      li.list-item.popover-list-item
        svg.iconnables
        | Edit
      li.divider
      li.list-item.popover-list-item(
        pop-over
        pop-over-template = "viewPopoverSshKey"
      )
        svg.iconnables
          use(
            xlink:href = "#icons-trash"
          )
        | Delete