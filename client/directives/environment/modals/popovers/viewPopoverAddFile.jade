.popover.menu.bottom(
  ng-class = "{in: active}"
  ng-style = "popoverStyle.getStyle()"
  style = "transform-origin: 90% 0"
)
  .arrow.white(
    style = "left: auto; right: 0"
  )
  .popover-content
    ul.popover-list
      li.list-item.popover-list-item(
        ng-click = "actions.triggerUploadFile()"
      )
        svg.iconnables
          use(
            xlink:href = "#icons-file-new"
          )
        | File
      li.list-item.popover-list-item(
        ng-click = "actions.triggerAddRepository()"
      )
        svg.iconnables
          use(
            xlink:href = "#icons-repository-new"
          )
        | Repository
      li.list-item.popover-list-item(
        pop-over
        pop-over-template = "viewPopoverSshKey"
      )
        svg.iconnables
          use(
            xlink:href = "#icons-key-new"
          )
        | SSH Key