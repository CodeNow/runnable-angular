.modal-backdrop.in
  .modal-dialog.modal-repo-detail
    header.modal-header
      h1.modal-heading.text-left.text-overflow repository-name
      label.toggle-wrapper Auto Deploy
       input.toggle-input(
        type = "checkbox"
       )
       .toggle-group.toggle-xs
    section.modal-body
      .spinner-wrapper.spinner-md.in(
        ng-if = "false"
        ng-include = "'spinner'"
      )
      fancy-select.in
        fancy-option
          svg.iconnables.icons-branch
            use(
              xlink:href = "#icons-branch"
            )
          | branch-name
      ul.list.popover-list
        li.list.popover-list-item
          strong.strong Update README.md
          .clearfix.text-overflow
            a.a.small.monospace(
              ng-href = "#"
              
            ) d2763dd
