footer.modal-footer.clearfix(
  is-primary-button-disabled = "SMC.isPrimaryButtonDisabled(SMC.serverForm.$invalid)"
  server-modal-buttons
  server-modal-controller = "SMC"
  this-form = "SMC.serverForm"
