.popover.left.popover-link-servers(
  ng-class = "{in: data.show}"
  ng-click = "$event.stopPropagation()"
)
  .arrow.white
  .popover-content
    .popover-guides(
      ng-class = "{in: data.guide}"
      ng-init = "data.guide = true"
    )
      p.p.clearfix Enable linking a server by adding the
        a.link.link-code(
          href = "//docs.docker.com/reference/builder/#expose"
          target = "_blank"
        ) EXPOSE
        | instruction to its Dockerfile to open ports.
    ul.list.popover-list
      li.list-item.popover-list-item.small Choose port to link
        button.btn.btn-xs(
          ng-class = "{active: data.guide}"
          ng-click = "data.guide = !data.guide"
        ) ?
      li.list-item.popover-list-item
        div api-server
        button.btn.btn-xxs.gray 80
        button.btn.btn-xxs.gray 8080
      li.list-item.popover-list-item
        div mongo-server
        button.btn.btn-xxs.gray 80
        button.btn.btn-xxs.gray 3001
        button.btn.btn-xxs.gray 8080
        button.btn.btn-xxs.gray 8081
        button.btn.btn-xxs.gray 8081
        button.btn.btn-xxs.gray 8081
        button.btn.btn-xxs.gray 8081
      li.list-item.popover-list-item
        div web-server
        button.btn.btn-xxs.gray 80
        button.btn.btn-xxs.gray 3001