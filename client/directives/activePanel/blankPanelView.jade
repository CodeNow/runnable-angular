//- for theme and full-screen controls
.floating-controls(
  ng-include = "'viewFloatingControls'"
)

p.p(
  ng-if = "instance.contextVersion.attrs.dockRemoved"
) Container Temporarily Unavailable

ul(
  ng-if = "!instance.contextVersion.attrs.dockRemoved"
)
  li.btn.btn-open-tab(
    ng-click = "openItems.addTerminal()"
  )
    svg.iconnables
      use(
        xlink:href = "#icons-start-cmd"
      )
    | Terminal
  li.btn.btn-open-tab(
    ng-click = "openItems.addBuildStream()"
  )
    svg.iconnables
      use(
        xlink:href = "#icons-build-logs"
      )
    | Build Logs
  li.btn.btn-open-tab(
    ng-click = "openItems.addLogs()"
  )
    svg.iconnables.icons-server
      use(
        xlink:href = "#icons-cmd-logs"
      )
    | CMD Logs
