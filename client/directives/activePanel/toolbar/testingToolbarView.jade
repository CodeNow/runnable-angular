svg.iconnables.float-left(
  ng-class = "{'icons-hourglass': instance.status() === 'running'}"
)
  use(
    xlink:href = "#icons-check"
    ng-if = "instance.status() === 'stopped'"
  )
  use(
    xlink:href = "#icons-hourglass"
    ng-if = "instance.status() === 'crashed'"
  )
  use(
    xlink:href = "#icons-close"
    ng-if = "instance.status() === 'failed'"
  )
p.p.text-overflow
  {{ instance.status() === 'stopped' ? 'Tests Passed' : '' }}
  {{ instance.status() === 'running' ? 'Tests Running' : '' }}
  {{ instance.status() === 'crashed' ? 'Tests Failed' : '' }}

  // Temporarily turning off until we can get timing working - https://runnable.atlassian.net/browse/SAN-4409
    .grid-block.align-center.shrink.small.duration
      svg.iconnables
        use(
          xlink:href = "#icons-stopwatch"
        )
      | 88:88

button.btn.btn-md.btn-toolbar(
  ng-click = "rebuildWithoutCache()"
) Rerun Test
