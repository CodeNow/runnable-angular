//- tabs
.views-tabs(
  open-items = "openItems"
  instance = "instance"
  debug-container = "debugContainer"
  tabs
)

//- toolbar
.views-toolbar-wrapper(
  ng-class = "{\
    'toolbar-lg': $root.featureFlags.saveToolbar && showDebugCmd,\
    'ace-runnable-dark': !$root.featureFlags.imAfraidOfTheDark,\
    'ace-runnable-light': $root.featureFlags.imAfraidOfTheDark\
  }"
  ng-show = "$root.featureFlags.saveToolbar || showDebugCmd"
  ng-include = "'viewToolbar'"
)

//- active panel
.active-panel(
  ng-class = "{\
    'ace-runnable-dark': !$root.featureFlags.imAfraidOfTheDark,\
    'ace-runnable-light': $root.featureFlags.imAfraidOfTheDark\
  }"
  ng-repeat = "item in openItems.models"
  ng-show = "item === openItems.activeHistory.last()"
)
  //- when build failed to start
  .views-toolbar(
    ng-if = "$root.featureFlags.noBuildLogs"
  )
    small.small.text-overflow(
      title = "/node-hello-world/server.js"
    ) There was an error starting your build.
    //- disable save buttons until a change a made
    button.btn.btn-xs.purple.btn-toolbar.float-right(
      ng-class = "{in: data.saving}"
      ng-click = "data.saving = !data.saving"
    ) Rebuild without cache

  .floating-controls(
    ng-if = "$root.featureFlags.fullScreenToggle || $root.featureFlags.themeToggle"
    ng-include = "'viewFloatingControls'"
  )

  .build-log-wrapper(
    build-logs
    instance = 'instance'
    debug-container = "debugContainer"
    ng-class = "{\
      'logs-runnable-dark': !$root.featureFlags.imAfraidOfTheDark,\
      'logs-runnable-light': $root.featureFlags.imAfraidOfTheDark\
    }"
    ng-if = "item.state.type === 'BuildStream' && (instance || debugContainer)"
    ng-style = "($root.featureFlags.themeToggle || $root.featureFlags.fullScreenToggle) && {'padding-right': '42px'}"
  )

  .term-js.term-log(
    log-term
    instance = 'instance'
    debug-container = "debugContainer"
    controller = "BoxLogController"
    ng-if = "item.state.type === 'LogView'"
  )

  //- terminal
  .term-js(
    log-term
    instance = 'instance'
    debug-container = "debugContainer"
    controller = "TermController"
    ng-if = "item.state.type === 'Terminal'"
  )

  //- files
  .ace-container(
    file = "item"
    file-editor
    loading = "loading"
    ng-if = "item.state.type === 'File'"
    use-auto-update = "useAutoUpdate"
  )

  div(
    current-model = "instance.attrs"
    env-vars
    ng-if = "item.state.type === 'EnvVars'"
    state-model = "stateModel"
    validation = "validation.env"
  )
    span.js-char-width 0

//- blank state
.blank-panel(
  ng-class = "{\
    'ace-runnable-dark': !$root.featureFlags.imAfraidOfTheDark,\
    'ace-runnable-light': $root.featureFlags.imAfraidOfTheDark\
  }"
  ng-if= "openItems.models.length === 0"
  ng-include = "'blankPanelView'"
)
