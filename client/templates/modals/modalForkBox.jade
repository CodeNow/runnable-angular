.modal.modal-fork(
  ng-class = "{'in': in}"
)
  .modal-dialog(
    ng-click = "$event.stopPropagation()"
  )
    .modal-header
      svg.iconnables.icons-edit
        use(xlink:href = "#icons-edit")
    .modal-body
      form
        label Enter a new name for your Box:
          //- fill value with instance name
          //- autofocus on modal open
          input.validate.modal-input(
            autofocus
            placeholder = "Box Name"
            spellcheck = "false"
            validate-name-pattern
            validate-name = ""
          )
          //- if invalid character is entered
          .validate-wrapper
            span.validate-rules(
              ng-class = "{in: false}"
            ) We accept #{''}
              b.btn.btn-xs.orange A-Z
              b.btn.btn-xs.orange a-z
              b.btn.btn-xs.orange 0-9
              b.btn.btn-xs.orange _
              b.btn.btn-xs.orange -
            //- if the name is taken
            span.validate-rules(
              ng-class = "{in: false}"
            ) That's a pretty name, but it's taken.
        //- env vars
        label.ace-runnable-dark Set environment variables:
          pre.pre.ace_editor.ace-tm
            label.environment-variable
              .ace_gutter-cell 1
              span GITHUB_CLIENT_ID = #{''}
              input.environment-input(
                value = "7a2b50212a5598ba3cf5"
              )
            label.environment-variable
              .ace_gutter-cell 2
              span GITHUB_CLIENT_SECRET = #{''}
              input.environment-input(
                value = "eece03e4cf3a18162512ed2f6b85d8d3ae65a164"
              )
            label.environment-variable
              .ace_gutter-cell 3
              span FULL_API_DOMAIN = #{''}
              input.environment-input(
                value = "http://mewl10-3030.runnable.io"
              )
            label.environment-variable
              .ace_gutter-cell 4
              span GITHUB_CALLBACK_URL = #{''}
              input.environment-input(
                value = "http://mewl10-3030.runnable.io/auth/github/callback"
              )
            label.environment-variable
              .ace_gutter-cell 5
              span GITHUB_HOOK_URL = #{''}
              input.environment-input(
                value = "http://mewl10-3030.runnable.io/actions/github"
              )
    .modal-footer
      button.white(
        ng-click = "cancel()"
        type = "button"
      ) Cancel
      button.green Fork Box
