.modal-backdrop(
  ng-class = "{'in': in}"
)
  .modal-dialog.modal-environment(
    ng-class = "{'show-sidebar': data.toggleSidebar}"
    ng-click = "$event.stopPropagation()"
  )
    .modal-container
      header.modal-header
        h1.modal-heading Edit Environment
        button.btn.btn-icon.white(
          ng-click = "data.toggleSidebar = !data.toggleSidebar"
          tooltip = "View List of Boxes"
          tooltip-options = "{\"class\":\"bottom\",\"left\":11,\"top\":30}"
          type = "button"
        )
          svg.iconnables.icons-sidebar
            use(
              xlink:href = "#icons-sidebar"
            )
      main.modal-body
        pre.pre.ace_editor.ace-tm(
          ng-init = "data.env = [];"
        )
      footer.modal-footer
        button.orange Rebuild
        //- button.green Save
        button.white(
          ng-click = "cancel()"
          type = "button"
        ) Go Back
    aside.modal-sidebar
      h2.sub-header Box List
      ul
        li