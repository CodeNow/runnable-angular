.arrow.white
.popover-content
  ul#file-explorer-options.popover-body
    li(
      ng-click = "dataBuild.data.showAddRepo = true"
    )
      svg.iconnables
        use(xlink:href = "#icons-git-new")
      | Add Repo

  #add-repo.popover-body
    form.search
      input.form-control(
        type = "search"
        placeholder = "Filter Repositories"
        required
      )
      button.submit
        object.inactive(
          data = "/build/images/icons/icons-search.svg"
          type = "image/svg+xml"
        )
        object.active(
          data = "/build/images/icons/icons-search-active.svg"
          type = "image/svg+xml"
        )
    ul.popover-list
      li(
        ng-class = "{in: dataBuild.data.showForm}"
        ng-click = "dataBuild.data.showForm = true"
      )
        span
          button.btn-icon(
            ng-click = "dataBuild.data.showForm = false"
            type = "button"
          )
            object.iconnables(
              data = "/build/images/icons/icons-chevron-left.svg"
              type = "image/svg+xml"
            )
          | org/reponame
        form.add-repo-form
          input.form-control(placeholder = "Branch or SHA (optional)")
          button.btn-block.green Add Repository
      li(
