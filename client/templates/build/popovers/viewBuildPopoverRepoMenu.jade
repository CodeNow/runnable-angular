.popover.file-menu.bottom.fade(
  ng-class = "{in: data.show}"
)
  .arrow.white
  .popover-content
    ul#file-explorer-options.popover-body
      li(
        ng-click = "data.show = true"
      )
        svg.iconnables
          use(xlink:href = "#icons-git-new")
        | Add Repo

    #add-repo.popover-body
      form.search
        input.form-control(
          type = "search"
          placeholder = "Filter Repositories"
          required
        )
        button.submit
          svg.iconnables.icons-search
            use(xlink:href = "#icons-search")
          svg.iconnables.icons-search-active
            use(xlink:href = "#icons-search-active")
      ul.popover-list
        li(
          ng-class = "{in: data.showForm}"
          ng-click = "data.showForm = true"
        )
          span
            button.btn-icon(
              ng-click = "data.showForm = false"
              type = "button"
            )
              object.iconnables(
                data = "/build/images/icons/icons-chevron-left.svg"
                type = "image/svg+xml"
              )
            | org/reponame
          form.add-repo-form
            input.form-control(placeholder = "Specify Branch or SHA (optional)")
            button.btn-block.green Add Repository
        li
          span
            button.btn-icon(type = "button")
              object.iconnables(
                data = "/build/images/icons/icons-chevron-left.svg"
                type = "image/svg+xml"
              )
            | org/reponame
          form.add-repo-form
            input.form-control(placeholder = "Specify Branch or SHA (optional)")
            button.btn-block.green Add Repository
        li
          span
            button.btn-icon(type = "button")
              object.iconnables(
                data = "/build/images/icons/icons-chevron-left.svg"
                type = "image/svg+xml"
              )
            | org/reponame
          form.add-repo-form
            input.form-control(placeholder = "Specify Branch or SHA (optional)")
            button.btn-block.green Add Repository
