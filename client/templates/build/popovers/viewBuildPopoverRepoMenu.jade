.popover.file-menu.bottom.fade(
  ng-class = "{\
    'in': data.show,\
    'show-add-repo': showAddRepo\
  }"
)
  .arrow.white
  .popover-content
    ul#file-explorer-options.popover-body
      li(
        ng-click = "showAddRepo = !showAddRepo"
      )
        svg.iconnables
          use(xlink:href = "#icons-git-new")
        | Add Repo

    #add-repo.popover-body
      form.search
        input.form-control(
          type = "search"
          placeholder = "Filter Repositories"
          ng-model = "data.repoFilter"
          required
        )
        button.submit
          svg.iconnables.icons-search
            use(xlink:href = "#icons-search")
          svg.iconnables.icons-search-active
            use(xlink:href = "#icons-search-active")
      ul.popover-list
        li(
          ng-repeat = "repo in data.githubRepos.models | \
            unaddedRepos:data.appCodeVersions | \
            repos:data.repoFilter"
          ng-class = "{ in: data.selectedRepo === repo }"
          ng-click = "data.selectedRepo = repo; data.repoOrSHA = '';"
        )
          span {{ repo.attrs.full_name }}
          form.add-repo-form
            input.form-control(
              ng-model = "data.repoOrSHA"
              placeholder = "Specify Branch or SHA (optional)"
            )
            button.btn-block.green(
              ng-click = "actions.addGithubRepo(repo, data.repoOrSHA)"
            ) Add Repository
