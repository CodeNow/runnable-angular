.arrow.white
.popover-content
  ul#file-explorer-options.popover-body
    li
      object.iconnables(
        data = "/build/images/icons/icons-new-file.svg"
        type = "image/svg+xml"
      )
      | New File
    li
      object.iconnables(
        data = "/build/images/icons/icons-new-folder.svg"
        type = "image/svg+xml"
      )
      | New Folder
    li.divider
    li(
      ng-click = "dataBuild.showAddRepo = true"
    )
      object.iconnables(
        data = "/build/images/icons/icons-octocat.svg"
        type = "image/svg+xml"
      )
      | Add Repo

  #add-repo.popover-body
    form.search
      input.form-control(
        type = "search"
        placeholder = "Filter Repositories"
        required
      )
      button.submit
        object.inactive(
          data = "/build/images/icons/icons-search.svg"
          type = "image/svg+xml"
        )
        object.active(
          data = "/build/images/icons/icons-search-active.svg"
          type = "image/svg+xml"
        )
    ul.popover-list
      li(
        ng-class = "{in: dataBuild.showForm}"
        ng-click = "dataBuild.showForm = true"
      )
        span org/reponame
        form.add-repo-form
          input.form-control(placeholder = "Branch or SHA (optional)")
          button.btn-block.green Add Repository
      li(
        ng-class = "{in: dataBuild.showForm}"
        ng-click = "dataBuild.showForm = true"
      )
        span org/reponame
        form.add-repo-form
          input.form-control(placeholder = "Branch or SHA (optional)")
          button.btn-block.green Add Repository