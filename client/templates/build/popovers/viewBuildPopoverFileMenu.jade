.popover.file-menu.bottom.fade(
  ng-class = "{ \
    'in': data.show, \
  }"
)
  .arrow.white
  .popover-content
    ul#file-explorer-options.popover-body
      li(
        ng-click = "actions.create(false)"
      )
        svg.iconnables
          use(xlink:href = "#icons-file-new")
        | New File
      li(
        ng-click = "actions.create(true)"
      )
        svg.iconnables
          use(xlink:href = "#icons-folder-new")
        | New Folder
