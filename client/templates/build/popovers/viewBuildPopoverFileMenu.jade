.popover.file-menu.bottom.fade(
  ng-class = "{ \
    'in': data.show, \
    'show-add-repo': data.showPopoverFileMenuAddRepo, \
    'show-form': data.showPopoverFileMenuForm \
  }"
)
  .arrow.white
  .popover-content
    ul#file-explorer-options.popover-body
      li(
        ng-click = "actions.createFile()"
      )
        svg.iconnables
          use(xlink:href = "#icons-file-new")
        | New File
      li
        svg.iconnables
          use(xlink:href = "#icons-folder-new")
        | New Folder
      li.divider
      li
        svg.iconnables
          use(xlink:href = "#icons-file-upload")
        | Upload File
      li
        svg.iconnables
          use(xlink:href = "#icons-folder-upload")
        | Upload Folder