.arrow
h3.popover-title Set Build Recipe and Message
.popover-content
  form
    //- recipe should clear on click
    //- 'Main' should be replaced with the last recipe the build was created with
    //- needs to revert on close
    .form-label
      input.form-control(
        list = "user-recipes"
        ng-click = ""
        ng-init="buildRecipe='Main'"
        ng-model = "buildRecipe"
        placeholder = "Choose or Create Recipe"
        value = "Main"
      )
      object.iconnables(
        data = "/build/images/icons/icons-recipe-alt.svg"
        type = "image/svg+xml"
      )
    datalist(
      id = "user-recipes"
    )
      option(value = "Main")
      option(value = "Recipe 1")
      option(value = "Recipe 2")
      option(value = "Recipe 3")
    textarea.form-control(placeholder = "Build Message")
    button.btn-block.green Build in {{buildRecipe}}