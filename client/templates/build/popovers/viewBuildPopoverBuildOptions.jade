.popover.menu.bottom.fade(
  ng-class = "{'in': data.show}"
)
  .arrow
  h3.popover-title Build As...
  .popover-content
    form
      //- needs to revert on close
      //- should be blank initially
      .form-label
        input.form-control(
          list = "user-configs"
          ng-click = "actions.resetInputModelValue($event)"
          ng-model = "data.buildName"
          placeholder = "Choose or create Config."
        )
        svg.iconnables.icons-recipe
          use(xlink:href = "#icons-recipe")
      datalist(
        id = "user-configs"
      )
        option(
          ng-repeat = "env in data.project.environments.models"
          value = "{{ env.attrs.name }}"
        )
      textarea.form-control(
        placeholder = "Add a build message."
        ng-model = "data.buildMessage"
      )
      button.btn-block.green(
        ng-click = "actions.build()"
      ) {{ actions.getPopoverButtonText(data.buildName) }}
