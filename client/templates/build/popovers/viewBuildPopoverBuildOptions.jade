.popover.menu.bottom.fade(
  ng-class = "{'in': data.showBuildMenu}"
)
  .arrow
  h3.popover-title Set Config and Message
  .popover-content
    form
      //- needs to revert on close
      .form-label
        input.form-control(
          list = "user-configs"
          ng-click = "actions.resetInputModelValue($event)"
          ng-model = "data.buildName"
          placeholder = "Choose or Create Config"
        )
        svg.iconnables.icons-recipe
          use(xlink:href = "#icons-recipe")
      datalist(
        id = "user-configs"
      )
        option(
          ng-repeat = "env in data.environments"
        )
        option(value = "Config 1")
        option(value = "Config 2")
        option(value = "Config 3")
      textarea.form-control(placeholder = "Build Message")
      button.btn-block.green {{ actions.getPopoverButtonText(data.buildName) }}
