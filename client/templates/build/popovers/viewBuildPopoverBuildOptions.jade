.arrow
h3.popover-title Set Recipe and Message
.popover-content
  form
    //- needs to revert on close
    .form-label
      input.form-control(
        list = "user-recipes"
        ng-click = "dataBuild.buildRecipe=''"
        ng-init = "dataBuild.buildRecipe=dataApp.stateParams.branchName"
        ng-model = "dataBuild.buildRecipe"
        placeholder = "Choose or Create Recipe"
        value = "{{ dataApp.stateParams.branchName }}"
      )
      object.iconnables(
        data = "/build/images/icons/icons-recipe-alt.svg"
        type = "image/svg+xml"
      )
    datalist(
      id = "user-recipes"
    )
      option(value = "Main")
      option(value = "Recipe 1")
      option(value = "Recipe 2")
      option(value = "Recipe 3")
    textarea.form-control(placeholder = "Build Message")
    button.btn-block.green Build in {{dataBuild.buildRecipe}}