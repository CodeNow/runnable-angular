.spinner-wrapper.spinner-lg.spinner-purple.in(
  ng-click = "state.loading = false"
  ng-if = "state.loading"
  ng-include = "'spinner'"
)

.setup-header.load(
  ng-if = "!state.loading"
)
  h1.h1 Add Servers
  p.p Each repositories to be created on their own server. We'll automagically
    br
    | recommend dependencies as you choose repositories.

.setup-body.load(
  ng-if = "!state.loading"
)
  .card.disabled
    input.input.input-sm.input-search(
      placeholder = "Filter by name"
      required
    )
    ul.list.list-repositories(
      ng-click = "state.repositorySelected = true"
      ng-init = "state.repositorySelected = false"
    )
      li.list-item(
        ng-class = "{active: data.toggleApi}"
        ng-click = "data.toggleApi = !data.toggleApi"
      ) api
        small.small Updated an hour ago
        button.btn.btn-xs.btn-icon.btn-check(
          ng-class = "{active: data.toggleApi}"
        )
          svg.iconnables.icons-add
            use(
              xlink:href = "#icons-add"
            )
          svg.iconnables.icons-check
            use(
              xlink:href = "#icons-check"
            )
        ul.list.list-nested(
          ng-click = "$event.stopPropagation();"
          ng-if = "data.toggleApi"
        )
