.setup-header
  h1.h1 Your Servers
  p.p We&rsquo;ve automagically filled out the server details for you,
    br
    | and added servers for dependencies.

.setup-body(
  ng-init = "data.cardLoading = true"
)
  //- card #1
  //- loading state
  .card.card-loading(
    ng-click = "data.cardLoading = false"
    ng-if = "data.cardLoading"
  )
    .spinner-wrapper.spinner-md.spinner-purple.in(
      ng-include = "'spinner'"
    )
    | Configuring
  .card.load(
    ng-class = "{\
      active: popoverConfigureServer.data.show,\
      focus: data.runnableApi\
    }"
    ng-if = "!data.cardLoading"
  )
    svg.iconnables.icons-gear(
      toggle-pop-over
      toggle-pop-over-model = "popoverConfigureServer.data.show"
    )
      use(
        xlink:href = "#icons-gear"
      )
      pop-over(
        actions = "popoverConfigureServer.actions"
        data = "popoverConfigureServer.data"
        popover-options = "{\"left\":0,\"top\":0}"
        template = "viewPopoverConfigureServer"
      )
    h2.card-header
      svg.iconnables.icons-repository
        use(
          xlink:href = "#icons-repository"
        )
      | api
    .card-body.clearfix
      ul.list.list-col.small
        li.list-item Language
        li.list-item Ports
        li.list-item Command
      ul.list.list-col
        li.list-item.monospace.text-overflow
          svg.iconnables.icons-nodejs
            use(
              xlink:href = "#icons-nodejs"
            )
          | v0.10.28
        li.list-item.monospace.text-overflow 80,8000,8080,3000
        li.list-item.monospace.text-overflow npm start

  //- card #2
  //- loading state
  .card.card-loading(
    ng-click = "data.cardLoading = false"
    ng-if = "data.cardLoading"
  )
    .spinner-wrapper.spinner-md.spinner-purple.in(
      ng-include = "'spinner'"
    )
    | Configuring
  .card.load(
    ng-class = "{focus: data.runnableAngular}"
    ng-if = "!data.cardLoading"
  )
    svg.iconnables.icons-gear
      use(
        xlink:href = "#icons-gear"
      )
    h2.card-header.load(
      ng-if = "!data.cardLoading"
    )
      svg.iconnables.icons-repository(
      )
        use(
          xlink:href = "#icons-repository"
        )
      | runnable-angular
    .card-body.clearfix
      ul.list.list-col.small
        li.list-item Language
        li.list-item Ports
        li.list-item Command
      ul.list.list-col.monospace
        li.list-item.monospace.text-overflow
          svg.iconnables.icons-nodejs
            use(
              xlink:href = "#icons-nodejs"
            )
          | v0.10.35
        li.list-item.monospace.text-overflow 80,8000,8080,3000
        li.list-item.monospace.text-overflow npm start

  .card.load(
    ng-if = "!data.cardLoading"
  )
    svg.iconnables.icons-gear
      use(
        xlink:href = "#icons-gear"
      )
    h2.card-header.load(
      ng-if = "!data.cardLoading"
    )
      svg.iconnables.icons-server(
      )
        use(
          xlink:href = "#icons-server"
        )
      | MongoDb
    .card-body.clearfix
    .well.small.gray(
      ng-if = "!data.dismiss"
    )
      button.btn.btn-xxs.btn-icon.gray.btn-close(
        ng-click = "data.dismiss = true"
      )
        svg.iconnables.icons-close
          use(
            xlink:href = "#icons-close"
          )
      | MongoDb detected as a dependency of #{''}
      button.btn.btn-xxs.gray(
        ng-click = "data.runnableAngular = !data.runnableAngular"
      ) runnable-angular
      | #{''} and #{''}
      button.btn.btn-xxs.gray(
        ng-click = "data.runnableApi = !data.runnableApi"
      ) api
      | .

  .card.card-template(
    ng-if = "!data.cardLoading"
  )
    svg.iconnables.icons-add
      use(
        xlink:href = "#icons-add"
      )
    | Add Server
  //- .card.card-template.active(
  //-   ng-if = "data.addingServer"
  //- )
    h2.card-header New Server
    .card-body
    .card-footer
      button.btn.btn-xs.gray(
        ng-click = "data.addingServer = false"
      ) Cancel

.setup-footer
  button.btn.btn-sm.white(
    ng-click = "state.step = 1"
  ) Back
  button.btn.btn-sm.green(
    ng-click = "state.step = 3"
  ) Continue