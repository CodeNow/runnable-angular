.setup-body
  .card.load
    h2.card-header
      svg.iconnables.icons-server
        use(
          xlink:href = "#icons-server"
        )
      | api
  ul.card-body
    li.card-item
      h4.h4
        svg.iconnables
        | Start CMD
      p.p.monospace npm start
    li.card-item
      h4.h4
        svg.iconnables
        | Ports
      p.p.monospace 80,300,30001
    li.card-item
      h4.h4


