nav#build-stream-header.sub-header
  h1 Builds for
    button.btn.silver.recipe(
      ng-class = "{active: dataBuildList.showChangeRecipe}"
      ng-click = "dataBuildList.togglePopover('ChangeRecipe', $event);"
      type = "button"
    ) {{ dataBuildList.environment.attrs.name }}
      span.arrow-down
      .popover.menu.bottom.fade(
        ng-class = "{in: dataBuildList.showChangeRecipe}"
        ng-include = "'viewBuildListPopoverChangeRecipe'"
      )
  h1(ng-click = "dataBuildList.show404()") show 404
  form.search
    input.form-control(
      placeholder = "Search Builds"
      required
    )
    button.submit
      object.inactive(
        data = "/build/images/icons/icons-search.svg"
        type = "image/svg+xml"
      )
      object.active(
        data = "/build/images/icons/icons-search-active.svg"
        type = "image/svg+xml"
      )
  .btn-group
    button.silver(type = "button")
      object(
        data = "/build/images/icons/icons-chevron-left.svg"
        type = "image/svg+xml"
      )
      | Prev 100
    button.silver(type = "button") Next 100
      object(
        data = "/build/images/icons/icons-chevron-right.svg"
        type = "image/svg+xml"
      )

.table-scroll
  table#build-stream.table.table-hover
    thead
      tr
        th
        th.sortable(
          ng-click = "dataBuildList.toggleSortByBuild()"
          ng-class = "dataBuildList.getBuildSortClass()"
        )
          span Build
        th Triggered By
        th Commit Message
        th Repo
        th.sortable
          span Duration
        th.sortable
          span Initiated
        th Actions
    tbody
      tr(
        ng-repeat = "build in dataBuildList.builds.models | orderBy:dataBuildList.predicate:dataBuildList.direction"
        ng-click  = "dataBuildList.redirectBuildPage(build.attrs.id)"
      )
        td
          object(
            data = "/build/images/icons/icons-pass.svg"
            type = "image/svg+xml"
          )
        td {{ build.attrs.id | limitTo:4 }}...
        td {{ dataBuildList.buildOwners.getById(build.attrs.owner).attrs.username }}
        td {{ build.attrs.message }}

        //- td {{ dataBuildList.environments.getById(build.attrs.environment).attrs.name }}
        td {{ '' }}

        td {{ build.attrs.duration }}
        td {{ build.attrs.created | timeAgo }}
        td
          a.tooltip(
            ng-click   = "dataBuildList.redirectInstancePage(build.attrs.id)"
            data-title = "Run Instance"
          )
            object(
              data = "/build/images/icons/icons-run.svg"
              type = "image/svg+xml"
            )


