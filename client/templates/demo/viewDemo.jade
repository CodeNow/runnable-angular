nav.sidebar.global-sidebar.demo-sidebar
  a.logo.logo(
    href = "#"
  )
    svg
      use(
        xlink:href = "#runnable-icon"
        )
  h1.sidebar-header Welcome
  p.sidebar-paragraph This text briefly describes what boxes are and what you can do with it.
  p.sidebar-paragraph Sign in to save this box along with any changes you&rsquo;ve made.
  a.btn.btn-block.green(
    href = "#"
    modal
    modal-actions = "dataDemoLayout.actions.actionsModalSignIn"
    modal-data = "dataDemoLayout.data.dataModalSignIn"
    modal-template = "viewModalSignIn"
  )
    svg.iconnables.icons-git
      use(
        xlink:href = "#icons-git"
      )
    | Sign In

//- .guide-mark should appear on the DOM as a direct child of body (like popovers)
