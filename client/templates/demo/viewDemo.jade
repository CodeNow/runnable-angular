main.content
  header.box-header

    h1.box-info.load
      .box-name demo-name
        span.icons-status(
          ng-class = "running"
          tooltip = "Started just now"
          tooltip-options = "{\"class\":\"bottom\",\"left\":-7,\"top\":12}"
        )
      input.box-url(
        readonly
        select-all
        value = "demo-name.demo.runnable.io"
      )
      //- sets layout on h1.box-name for .box-url
      span.box-name-ghost demo-name.demo.runnable.io

    .primary-actions
      .btn-group
        button.green.btn-save(
          type = "button"
        )
          span.btn-text Save
        button.green.btn-icon.btn-icon-sm.btn-save-options(
          type = "button"
        )
          svg.iconnables.icons-arrow-down
            use(
              xlink:href = "#icons-arrow-down"
            )

    .secondary-actions
      button.white.btn-action(
        type = "button"
      )
        svg.iconnables.icons-edit
          use(
            xlink:href = "#icons-edit"
          )
        | Edit
      button.white.btn-action(
        modal
        modal-actions = "actions.actionsModalSignIn"
        modal-data = "data.dataModalSignIn"
        modal-template = "viewModalSignIn"
        type = "button"
      )
        svg.iconnables.icons-fork
          use(
            xlink:href = "#icons-fork"
          )
        | Fork
      a.btn.white.btn-icon.btn-actions(
        type = "button"
      )
        svg.iconnables.icons-gear
          use(
            xlink:href = "#icons-gear"
          )

  //- sidebar with repositories and urls
  section.sidebar.box-sidebar.load
    section.row.repo-list
      h2.sub-header Repositories
      ul.repository-group
        li.repository-group-item
          svg.iconnables.icons-git
            use(xlink:href = "#icons-git")
          h3.repository-title demo-org/demo-repo
          .commit.load(
            toggle-pop-over
            toggle-pop-over-model = "popoverCommitSelect.data.show"
          )
            .commit-message remove ned stark
            svg.iconnables.icons-commit
              use(
                xlink:href = "#icons-commit"
              )
            span.commit-author grrm
            time.commit-time 16 years ago