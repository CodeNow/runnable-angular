nav.sidebar.global-sidebar.demo-sidebar
  header.row.account-header
    a.logo.logo(
      href = "#"
    )
      svg
        use(
          xlink:href = "#runnable-logo"
        )
  p.demo-sidebar-hint Add the repository you'd like to see running on this box.
  a.link.link-white.link-text Skip this step

main.content
  .guide-backdrop
  a.btn.btn-sm.white.sub-header-action.btn-add-repo.active(
    style = "left: 255px; top: 66px; z-index: 5000;"
  )
    svg.iconnables.icons-add
      use(
        xlink:href = "#icons-add"
      )
    .popover.bottom.popover-add-repo.in
      .arrow
      h3.popover-title(
        ng-class = "{ \
          'show-filter': data.showFilter \
        }"
      )
        //- should clear on close
        button.white.btn-icon.btn-search(
          ng-click = "data.showFilter = !data.showFilter; \
                      data.repoFilter = '';"
          ng-class = "{ \
            active: data.showFilter \
          }"
          title = "Filter Repositories"
        )
          svg.iconnables.icons-search
            use(
              xlink:href = "#icons-search"
            )
        //- focus on visible
        input.title-filter(
          ng-model = "data.repoFilter"
          select-on = "data.showFilter"
          placeholder = "Filter Repositories"
        )
        //- title
        span.title Add Repository
      .popover-content
        ul.popover-body.popover-list
          li.popover-list-item(
            ng-click = "actions.addRepo(repo)"
            title = "{{ repo.attrs.full_name }}"
          )
            span repoName
