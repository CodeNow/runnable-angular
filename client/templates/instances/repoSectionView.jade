h2.grid-block.align-center.justify-justified.nav-section-header
  span.text-overflow.padding-right-xxs(
    title = "{{masterComposeCluster.master.attrs.inputClusterConfig.clusterName}}"
  ) {{masterComposeCluster.master.attrs.inputClusterConfig.clusterName}}

  .grid-block.align-center.shrink.btn.btn-xs.white(
    data-event-name = "Clicked Add Branch button"
    ng-click = "CIS.popInstanceOpen(masterComposeCluster.master)"
    pop-over
    pop-over-controller = "CIS"
    pop-over-data = "'branchSelect'"
    pop-over-options = "{\"verticallyCentered\":true,\"left\":109,\"pinToViewPort\":true}"
    pop-over-template = "branchMenuPopoverView"
  ) Add a Branch
    svg.iconnables.icons-arrow-forward
      use(
        xlink:href = "#icons-arrow-down"
      )

section.nav-card(
  ng-class = "{'active': CIS.isCardActive(composeCluster.master)}"
  compose-card
  compose-cluster = "composeCluster"
  is-child = "true"
  ng-repeat = "composeCluster in masterComposeCluster.children | orderBy: ['master.attrs.name'] track by composeCluster.master.attrs._id"
  ng-if = "!composeCluster.master.destroyed"
  ng-show = "CIS.shouldShowBasic(composeCluster, 'master.getBranchName()')"
)

