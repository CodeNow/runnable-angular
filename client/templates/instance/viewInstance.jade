//- code_editor
#editor.with-addtab(
  ng-class="{'in': dataBuild.showExplorer, '': !dataBuild.showExplorer}"
)
  button#explorer-toggle.with-iconnables(
    ng-click = "dataBuild.showExplorer = !dataBuild.showExplorer"
    ng-init = "dataBuild.showExplorer = true"
  )
    object.iconnables(
      data = "/build/images/icons/icons-folder-open.svg"
      type = "image/svg+xml"
    )
  //- file_explorer
  aside#explorer
    ul#controls
      li.dark-theme.theme.active.tooltip(data-title = "Dark Theme")
        span
      li.light-theme.theme.tooltip(data-title = "Light Theme")
        span
    .explorer-header
      h6
        | INSTANCE FILES
        button.silver.btn-sm.file-explorer-menu.with-iconnables
          object.iconnables(
            data = "/build/images/icons/icons-gear.svg"
            type = "image/svg+xml"
          )
          .popover.fade.bottom.menu
            .arrow
              .popover-content
                ul#file-explorer-options.popover-body.col-popover-3
                  li
                    a
                      object.iconnables(
                        data = "/build/images/icons/icons-new-file.svg"
                        type = "image/svg+xml"
                      )
                      | New File
                  li
                    a
                      object.iconnables(
                        data = "/build/images/icons/icons-new-folder.svg"
                        type = "image/svg+xml"
                      )
                      | New Folder
                  li
                    a#add-repo-link
                      object.iconnables(
                        data = "/build/images/icons/icons-octocat.svg"
                        type = "image/svg+xml"
                      )
                      | Add Repo
              #add-repo.popover-body
                form
                  input.form-control(
                    type = "search"
                    placeholder = "Filter Repositories"
                  )
                ul.popover-list
                  li
                    a.select-repo
                      | username/reponame
                      a.btn.btm-sm.silver.glyphicons.cogwheel.select-branch
                    form.add-repo-form
                      input.form-control(placeholder = "Branch or SHA (optional)")
                      a.btn.btn-block.orange Add Repository
      ul.tree
        li.folder
          object.iconnables.filetypes(
            data = "/build/images/icons/filetypes/icons-folder.svg"
            type = "image/svg+xml"
          )
          | css
          ul
            li.folder
              object.iconnables.filetypes(
                data = "/build/images/icons/filetypes/icons-folder.svg"
                type = "image/svg+xml"
              )
              | modules
              ul
                li
                  object.iconnables.filetypes(
                    data = "/build/images/icons/filetypes/icons-file.svg"
                    type = "image/svg+xml"
                  )
                  | components.scss
            li
              object.iconnables.filetypes(
                data = "/build/images/icons/filetypes/icons-file.svg"
                type = "image/svg+xml"
              )
              | styles.css
            li
              object.iconnables.filetypes(
                data = "/build/images/icons/filetypes/icons-file.svg"
                type = "image/svg+xml"
              )
              | tables.css
        li
          object.iconnables.filetypes(
            data = "/build/images/icons/filetypes/icons-file.svg"
            type = "image/svg+xml"
          )
          | favicon.png
        li
          object.iconnables.filetypes(
            data = "/build/images/icons/filetypes/icons-file.svg"
            type = "image/svg+xml"
          )
          | index.html
        li
          object.iconnables.filetypes(
            data = "/build/images/icons/filetypes/icons-file.svg"
            type = "image/svg+xml"
          )
          | htc.access
  #editor-toolbar
    #tabs-wrapper
    //- file_tabs
  button#add-tab.with-iconnables(
    ng-class = "{active: dataInstance.showAddTab}"
    ng-click = "dataInstance.togglePopover('AddTab', $event);"
    type = "button"
  )
    object.iconnables(
      data = "/build/images/icons/icons-add-alt.svg"
      type = "image/svg+xml"
    )
    .popover.menu.bottom.fade(
      ng-class = "{in: dataInstance.showAddTab, 'show-new-shortcut':dataInstance.showNewShortcut}"
      ng-include = "'viewInstancePopoverAddTab'"
    )
  #select-tabs.dropdown
    button.with-iconnables(type = "button")
      object.iconnables(
        data = "/build/images/icons/icons-select.svg"
        type = "image/svg+xml"
      )
    select
      option(selected) Tab 1
      option Tab 2
  #editor-container
    //- code
    //- note: server log and terminal tab should open by default
    pre(ui-ace) Test

