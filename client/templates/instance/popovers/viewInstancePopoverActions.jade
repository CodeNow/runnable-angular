.popover.menu.bottom.fade.popover-actions(
  ng-class = "{in: data.show}"
)
  .arrow.white
  .popover-content
    ul.popover-body.popover-list
      li.popover-list-item(
        ng-click = "actions.stopInstance()"
        ng-if = "data.build.attrs.completed && data.container.running()"
      ) Stop Running
      li.popover-list-item(
        ng-click = "actions.startInstance()"
        ng-if = "data.build.attrs.completed && !data.container.running()"
      ) Start Running
      li.divider
      li.popover-list-item(
        modal
        modal-actions = "actions.actionsModalEnvironment"
        modal-data = "data.dataModalEnvironment"
        modal-template = "modalEnvironment"
      ) Edit Environment
      li.divider
      li.popover-list-item(
        modal
        modal-actions = "actions.actionsModalRename"
        modal-data = "data.dataModalRename"
        modal-template = "modalRenameBox"
      ) Rename Box
      li.popover-list-item(
        modal
        modal-actions = "actions.actionsModalFork"
        modal-data = "data.dataModalFork"
        modal-template = "modalForkBox"
      ) Fork to a New Box
      li.popover-list-item(
        modal
        modal-actions = "actions.actionsModalDelete"
        modal-data = "data.dataModalDelete"
        modal-template = "modalDeleteBox"
      ) Delete Box
