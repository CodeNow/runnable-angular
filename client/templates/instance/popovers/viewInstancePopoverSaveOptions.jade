.popover.menu.bottom.popover-save-options(
  ng-class = "{'in': data.show}"
)
  .arrow.white
  .popover-content
    ul.popover-body.popover-list
      li.popover-list-item
        label.row.label-checkbox(
          ng-class = "{out: !data.dataInstance.data.container.running() || data.dataInstance.data.loading}"
        ) Restart Instance on Save
          input.checkbox(
            checked
            ng-disabled = "!data.dataInstance.data.container.running()"
            ng-model = "data.dataInstance.data.restartOnSave"
            type = "checkbox"
          )