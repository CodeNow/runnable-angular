img.logo.logo-icon(
  height = "45"
  ng-click = "editFeatureFlags = CA.activeAccount.oauthName() === 'CodeNow'"
  pop-over
  pop-over-active = "editFeatureFlags"
  pop-over-options = "{\"left\":40}"
  pop-over-template = "viewPopoverFeatureFlags"
  pop-over-trigger = "activeAttr"
  src = "/build/images/runnable-icon-white.svg"
  width = "45"
)

