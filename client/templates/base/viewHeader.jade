img.logo.logo-icon.float-left(
  height = "45"
  ng-click = "editFeatureFlags = CA.activeAccount.oauthName() === 'CodeNow'"
  pop-over
  pop-over-active = "editFeatureFlags"
  pop-over-template = "viewPopoverFeatureFlags"
  pop-over-trigger = "activeAttr"
  pop-over-options = "{\"left\":40}"
  src = "/build/images/runnable-icon-white.svg"
  width = "45"
)

.btn-group
  a.btn.btn-sm.purple(
    ui-sref = "base.instances({ userName: CA.activeAccount.oauthName() })"
    ui-sref-active = "active"
  )
    svg.iconnables
      use(
        xlink:href = "#icons-server-dark"
      )
    | Containers
  a.btn.btn-sm.purple(
    ui-sref = "base.config({ userName: CA.activeAccount.oauthName() })"
    ui-sref-active = "active"
  )
    svg.iconnables
      use(
        xlink:href = "#icons-advanced-dark"
      )
    | Configure

//- menu
accounts-select(
  data = "dataApp.data"
)