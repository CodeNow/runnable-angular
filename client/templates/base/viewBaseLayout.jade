//- nav/sidebar
nav.nav-sidebar(
  ng-class = "{'in': $root.featureFlags.isolationNav}"
  ng-init = "\
    containers = [\
      {\
        name: 'api',\
        branches: [\
          {name: 'master', status: 'green'},\
          {name: 'add-owner-id-dedupe-check', status: 'green'},\
          {name: 'anton-goroost', status: 'red'},\
          {name: 'anton-jul8', status: 'red'}\
        ]\
      },{\
        name: 'datadog',\
        branches: [\
          {name: 'master', status: 'green'}\
        ]\
      },{\
        name: 'detention',\
        branches: [\
          {name: 'master', status: 'green'}\
        ]\
      },{\
        name: 'khronos',\
        branches: [\
          {name: 'master', status: 'green'},\
          {name: 'abort-on-uncaught-exception', status: 'green'},\
          {name: 'revert-14-revert-12-feature-restart-one-dock-script', status: 'red'},\
          {name: 'SAN-2487-cleanup-debug-containers', status: 'green'}\
        ]\
      },{\
        name: 'mavis',\
        branches: [\
          {name: 'master', status: 'green'},\
          {name: 'better-logging', status: 'green'},\
          {name: 'bypass-prev-dock', status: 'orange'},\
          {name: 'no-docks-404', status: 'red'},\
          {name: 'remove-numBuild', status: 'red'},\
          {name: 'temporary-branch-to-fork', status: 'red'}\
        ]\
      }\
    ]\
  "
)
  .list-header.fade(
    ng-class = "{'in': $root.featureFlags.isolationNav}"
  )
    svg.iconnables.icons-arrow-backward.float-left(
      ng-click = "$root.featureFlags.isolationNav = !$root.featureFlags.isolationNav"
    )
      use(
        xlink:href = "#icons-arrow-down"
      )
    | Containers

  .list.fade(
    ng-class = "{'in': $root.featureFlags.isolationNav}"
    ng-repeat = "container in containers"
  )
    //- repository name
    .list-item
      span.text-overflow(
        title = "{{container.name}}"
      ) {{container.name}}
      //- configure button for repo containers
      svg.iconnables.icons-advanced
        use(
          xlink:href = "#icons-advanced"
        )
    .list-item(
      ng-repeat = "branch in container.branches"
    )
      .icons-status(
        ng-class = "{\
          'green': branch.status === 'green',\
          'orange': branch.status === 'orange',\
          'red': branch.status === 'red'\
        }"
      )
      a.text-overflow(
        title = "{{branch.name}}"
      ) {{branch.name}}
      svg.iconnables.icons-overflow
        use(
          xlink:href = "#icons-overflow"
        )
    .btn.btn-xxs(
      ng-if = "$root.featureFlags.navListFilter"
      pop-over
      pop-over-options = "{\"top\":-33,\"left\":215}"
      pop-over-template = "viewMoreContainersPopover"
