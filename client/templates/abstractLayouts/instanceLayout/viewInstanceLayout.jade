//- sidebar for accounts and boxes
nav.sidebar.global-sidebar
  //- accounts
  header.row
    ol.accounts-group(
      ng-class = "{in: dataInstanceLayout.data.showChangeAccount}"
      ng-click = "dataInstanceLayout.data.showChangeAccount = !dataInstanceLayout.data.showChangeAccount"
    )
      li.accounts-group-item
        a.account
          img.gravatar(
            height = "24"
            ng-src = "{{ dataInstanceLayout.actions.getEntityGravatar(dataInstanceLayout.data.activeAccount) }}"
            width = "24"
          )
          span {{ dataInstanceLayout.actions.getEntityName(dataInstanceLayout.data.activeAccount) }}
          //- icons-arrow-down only for first account
          svg.iconnables.icons-arrow-down
            use(
              xlink:href = "#icons-arrow-down"
            )
      //- TODO ng-click
      //- current user (if user is not active)
      li.accounts-group-item(
        ng-if = "dataApp.user !== dataInstanceLayout.data.activeAccount"
      )
        a.account
          img.gravatar(
            height = "24"
            ng-src = "{{ dataInstanceLayout.actions.getEntityGravatar(dataApp.user) }}"
            width = "24"
          )
          span {{ dataInstanceLayout.actions.getEntityName(dataApp.user) }}
      //- Orgs that are not the active account
      li.accounts-group-item(
        ng-repeat = "org in dataInstanceLayout.data.orgs.models"
        ng-if = "org !== dataInstanceLayout.data.activeAccount"
      )
        a.account
          img.gravatar(
            height = "24"
            ng-src = "{{ dataInstanceLayout.actions.getEntityGravatar(org) }}"
            width = "24"
          )
          span {{ dataInstanceLayout.actions.getEntityName(org) }}
  //- boxes
  section.boxes.row
    h2.sub-header Boxes
      a.btn.white.sub-header-action(
        ng-click = "dataInstanceLayout.actions.stateToNewProject()"
      )
        svg.iconnables.icons-add
          use(
            xlink:href = "#icons-add"
          )
    ul.box-group
      //- apply .active for currently selected box
      //- apply .running for a running box
      li.box-group-item(
        //- TODO: ng-class placeholder property. Replace when API client ready
        ng-class = "{running: box.attrs.running}"
        ng-click = "dataInstanceLayout.actions.stateToInstance(box)"
        ng-repeat = "box in dataInstanceLayout.data.instances.models"
      )
        a.white.box {{ box.attrs.name }}
          svg.iconnables.icons-trigger
            use(
              xlink:href = "#icons-trigger"
            )

//- 2nd level views (boxInstnce, boxInstanceEdit...)
main(ui-view)

//- global spinner
.spinner-container(
  ng-class = "{in: dataApp.data.loading}"
)
  .spinner.lg
    .spinner-ring
