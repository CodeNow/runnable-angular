header.header(
  ng-include = "'viewHeader'"
)

nav.sidebar.nav-sidebar(
  ng-if = "!layoutOptions.hideSidebar"
  ng-hide = "isLoading.main && isLoading.sidebar"
)

  section.row.servers(
    instance-list
    is-main-page = "true"
    data = "dataApp.data"
  )

  footer.row.nav-footer
    a.small.link.link-gray.link-text(
      href = "//support.runnable.io"
      target = "_blank"
    )
      .btn.btn-xs.btn-help ?
      | Documentation

//- 2nd level views (viewInstance, viewInstanceEdit...)
main.content(
  ui-view
  ng-hide = "isLoading.main"
)

//- spinner for both instance AND sidebar
.spinner-wrapper.spinner-lg.spinner-purple.in(
  ng-if = "isLoading.main && isLoading.sidebar"
  ng-include = "'spinner'"
)

//- spinner for JUST instance
.spinner-wrapper.spinner-lg.spinner-purple.in(
  ng-if = "isLoading.main && !isLoading.sidebar"
  ng-include = "'spinner'"
)
