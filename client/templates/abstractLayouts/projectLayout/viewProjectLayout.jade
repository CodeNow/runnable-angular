header(
  ng-class = "dataProjectLayout.getInClass()"
)
  .startup-container
    a#logo(href = "/")
      span
      sup &lt;alpha&gt;
    button.white#user(
      ng-class="{'active': dataProjectLayout.showChangeAccount, '': !dataProjectLayout.showChangeAccount}"
      ng-click = "dataProjectLayout.showChangeAccount = !dataProjectLayout.showChangeAccount"
      type = "button"
    )
      img(
        height = "19"
        src = "{{ dataApp.user.attrs.gravitar }}"
        width = "19"
      )
      | {{ dataApp.user.attrs.username }}
      object.iconnables(
        data = "/build/images/icons/icons-arrow-down-alt.svg"
        type = "image/svg+xml"
      )
    ul.accounts.btn-group-vertical
      li.btn.white
        a
          img(
            height = "19"
            src = "https://avatars1.githubusercontent.com/u/2335750?s=64"
            width = "19"
          )
          | CodeNow
      li.btn.white
        a
          img(
            height = "19"
            src = "https://avatars1.githubusercontent.com/u/2335750?s=64"
            width = "19"
          )
          | Runnable
      li.btn.white
        a(
          href = "{{ dataApp.logoutURL }}"
        ) Log Out
    form
      //- this field is optional. if blank, name the app for them: 'My App'
      input.form-control(
        ng-model = "dataProjectLayout.newAppName"
        placeholder = "Application Name"
      )
      button.orange.btn-block(
        ng-click = "dataProjectLayout.createNewApp()"
