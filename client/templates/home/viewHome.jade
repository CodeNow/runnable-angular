main.home

  //- hero
  section.home-hero

    //- header
    header.home-header
      a.logo
        svg
          use(
            xlink:href = "#runnable-logo"
          )
      nav.home-nav
        a.link(
          ng-href = "{{ dataHome.data.hasPass ? dataApp.data.loginURL : 'mailto:support@runnable.com?subject=Send me an invite, or else!' }}"
        ) {{ dataHome.data.hasPass ? 'Sign In' : 'Request Invite' }}

    h1.h1.header-thin Stop worrying about servers
    h3.h3.header-thin Runnable is a sandbox service that replaces Staging, QA, and Test servers

  //- feature
  section.home-feature

    //- new server configuration
    section.feature.feature-configuration.row.clearfix(
      ng-include = "'viewConfiguration'"
    )

    .hr.hr-single

    //- commits
    section.feature.feature-commits.row.clearfix(
      ng-include = "'viewCommits'"
    )

    .hr.hr-single

    //- protype
    section.feature.feature-fork.clearfix(
      ng-include = "'viewFork'"
    )

    .hr.hr-single

    //- protype
    section.feature.feature-prototype.clearfix(
      ng-include = "'viewPrototype'"
    )

    .hr.hr-single

    //- github
    section.feature.feature-github.row.clearfix(
      ng-include = "'viewGithub'"
    )

    .hr.hr-single

    //- coming soon
    section.home-feature
      section.feature.feature-soon.clearfix(
        ng-include = "'viewSoon'"
      )

    a.btn.btn-xl.green(
      ng-href = "{{ dataHome.data.hasPass ? dataApp.data.loginURL : 'mailto:support@runnable.com?subject=Send me an invite, or else!' }}"
    ) {{ dataHome.data.hasPass ? 'Sign In' : 'Request Invite' }}

  footer.home-footer
    .hr
      img.hr-image(
        height = "30"
        src = "/build/images/runnable-icon.svg"
        width = "30"
      )
    nav.footer-nav
      a.link(
        href = "mailto:support@runnable.com"
      ) Email Us
      a.link(
        href = "http://support.runnable.io"
        target = "_blank"
      ) Documentation
      a.link(
        ng-href = "{{ dataApp.data.loginURL }}"
        ng-if = "dataHome.data.hasPass"
      )
        b Sign In
