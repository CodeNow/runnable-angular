main.hero(
  ng-class = "{'no-flex': !dataHome.data.hasPass}"
)
  header.hero-header
    a.logo(
      href = "/"
    )
      svg.logo-svg
        use(
          xlink:href = "#runnable-logo"
        )
    a.btn.btn-hero(
      ng-href = "{{ dataApp.data.loginURL }}"
      ng-if = "dataHome.data.hasPass"
    )
      svg.iconnables.icons-git
        use(
          xlink:href = "#icons-git"
        )
      | Sign In

  section.hero-heading
    h1.hero-text A Server for Every Commit
    p.hero-text-sub Run every version of your code as it's developed.

  a.btn.btn-hero(
    href = "mailto:support@runnable.com?subject=Send me an invite, or else!"
    ng-if = "!dataHome.data.hasPass"
  ) Request an Invite

  section.template-list(
    ng-if = "dataHome.data.hasPass"
  )
    a.template-list-item(
      href = "#"
    )
      //- .image-wrapper for separate animation and transition states
      .image-wrapper
        img.template-image(
          alt = "Django"
          src = "/build/images/icons/templates/icons-django.svg"
        )
      h2.template-title Django
