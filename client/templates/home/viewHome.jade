  //- error modal
  .modal-backdrop.in(
    ng-if = "data.embedActive"
  )
    .embed-video
      button.btn.btn-sm(
        ng-click = "data.embedActive = false"
      )
        svg.iconnables.icons-close.float-left
          use(
            xlink:href = "#icons-close"
