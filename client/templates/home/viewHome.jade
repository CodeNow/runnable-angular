main.home

  //- hero
  section.home-hero
    header.home-header
      a.logo
        svg
          use(
            xlink:href = "#runnable-logo"
          )
      nav.home-nav
        a.link.link-text Features
        a.link.link-text Pricing
        a.link.link-text Sign In
    h1.h1.header-thin Your Stack Online
