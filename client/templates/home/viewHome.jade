main.home

  //- hero
  section.home-hero

    //- header
    header.home-header
      a.logo
        svg
          use(
            xlink:href = "#runnable-logo"
          )
      nav.home-nav
        a.link.link-text Sign In

    h1.h1.header-thin Stop Configuring Servers
    h3.h3.header-thin Runnable automatically creates and updates servers for your team
    ul.list.box-group.in
      li.list-item.box-group-item.white.running development-server
        span.icons-status
      li.list-item.box-group-item.white.running QA-server
        span.icons-status
      li.list-item.box-group-item.white.running staging-server
        span.icons-status
      li.list-item.box-group-item.white.building production-server
        span.icons-status

  //- feature
  section.home-feature

    //- new server configuration
    section.feature.feature-configuration(
      ng-include = "'viewConfiguration'"
    )

    .hr.hr-single

    //- workflow
    section.feature.feature-workflow.row.clearfix(
      ng-include = "'viewWorkflow'"
    )

    .hr.hr-single

    //- protype
    section.feature.feature-protype.clearfix(
      ng-include = "'viewPrototype'"
    )

  //- pricing
  section.home-pricing.home-callout(
    ng-include = "'viewPricing'"
  )

  //- coming soon
  section.home-feature
    section.feature.feature-soon.clearfix(
      ng-include = "'viewSoon'"
    )

  footer.home-footer
    .hr
      img.hr-image(
        height = "30"
        src = "/build/images/runnable-icon.svg"
        width = "30"
      )
    nav.footer-nav
      a.link.link-text(
        href = "mailto:support@runnable.com"
      ) Email Us
      a.link.link-text(
        ng-href = "{{ dataHome.data.hasPass ? dataApp.data.loginURL : 'mailto:support@runnable.com' }}"
      )
