//- header
header.header.home-header
  .container
    a.logo-anchor
      img.logo.float-left(
        height = "45"
        src = "/build/images/runnable-logo.svg"
        width = "240"
      )
      sup.sup &lt;beta&gt;
    a.btn.btn-sm.purple.float-right(
      ng-href = "{{ dataHome.data.hasPass ? dataApp.data.loginURL : 'mailto:support@runnable.com?subject=Please send me an invite for the beta' }}"
    ) {{ dataHome.data.hasPass ? 'Sign In' : 'Request Invite' }}
    .float-right.clearfix
      a.btn.btn-sm.float-right(
        href = "mailto:info@runnable.com"
      ) Email Us
      a.btn.btn-sm.float-right(
        href = "http://support.runnable.io/"
        target = "_blank"
      ) Support

section.home-hero
