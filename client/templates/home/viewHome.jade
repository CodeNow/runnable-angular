main.home

  //- hero
  section.home-hero

    //- header
    header.home-header
      a.logo
        svg
          use(
            xlink:href = "#runnable-logo"
          )
      nav.home-nav
        a.link.link-text(
          ng-href = "{{ dataHome.data.hasPass ? dataApp.data.loginURL : 'mailto:support@runnable.com?subject=Send me an invite, or else!' }}"
        ) {{ dataHome.data.hasPass ? 'Sign In' : 'Request Invite' }}

    h1.h1.header-thin Stop worrying about servers
    h3.h3.header-thin Runnable is a sandbox service that replaces Staging, QA, and Test servers

  //- feature
  section.home-feature

    //- protype
    section.feature.feature-protype.clearfix(
      ng-include = "'viewPrototype'"
    )

    .hr.hr-single

    //- workflow
    section.feature.feature-workflow.row.clearfix(
      ng-include = "'viewWorkflow'"
    )

    .hr.hr-single

    //- new server configuration
    section.feature.feature-configuration(
      ng-include = "'viewConfiguration'"
    )

  //- pricing
  section.home-pricing.home-callout(
    ng-include = "'viewPricing'"
  )

  //- coming soon
  section.home-feature
    section.feature.feature-soon.clearfix(
      ng-include = "'viewSoon'"
    )

  a.btn.btn-xl.green(
    href = "mailto:support@runnable.com?subject=Send me an invite, or else!"
  ) Request Invite

  footer.home-footer
    .hr
      img.hr-image(
        height = "30"
        src = "/build/images/runnable-icon.svg"
        width = "30"
      )
    nav.footer-nav
      a.link.link-text(
        href = "mailto:support@runnable.com"
      ) Email Us
      a.link.link-text(
        ng-href = "{{ dataApp.data.loginURL }}"
        ng-if = "dataHome.data.hasPass"
      )
        b Sign In