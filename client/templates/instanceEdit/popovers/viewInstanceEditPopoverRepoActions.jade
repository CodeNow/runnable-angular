.popover.menu.bottom.fade(
  ng-class = "{'in': data.show}"
)
  .arrow.white
  .popover-content
    ul.popover-body.popover-list
      //- hide fast-forward and .divider if already on latest
      li.popover-list-item(
        ng-if = "repo.state.commitsBehind"
        ng-click = "actions.selectLatestCommitForRepo(data.repo)"
      ) Fast-Forward
        small.popover-list-item-details ({{ repo.state.commitsBehind }} Commits)
      li.divider(
        ng-if = "repo.state.commitsBehind"
      )
      li.popover-list-item(
        ng-click = "actions.deleteRepo(data.repo)"
      ) Delete