.popover.context-menu.file-menu.bottom.fade.in
  .popover-content
    ul#file-explorer-options.popover-body
      li(
        ng-click = "showAddRepo = !showAddRepo"
      )
        svg.iconnables
          use(xlink:href = "#icons-git-new")
        | Add Repo

    #add-repo.popover-body
      form.search
        input.form-control(
          type = "search"
          placeholder = "Filter Repositories"
          required
        )
        button.submit
          svg.iconnables.icons-search
            use(xlink:href = "#icons-search")
          svg.iconnables.icons-search-active
            use(xlink:href = "#icons-search-active")
      ul.popover-list
        li
          span org/reponame
          form.add-repo-form
            input.form-control(placeholder = "Specify Branch or SHA (optional)")
            button.btn-block.green Add Repository
