.popover.context-menu.file-menu.bottom.fade(
  ng-class = "{in: dirItemData.isOpen}"
  ng-style = "dirItemData.eStyle"
  right-click
)
  .popover-content
    ul#file-explorer-options.popover-body
      li(ng-click = "dirItemData.actions.createFile(); $event.stopPropagation();")
        svg.iconnables
          use(xlink:href = "#icons-file-new")
        | New File
      li(ng-click = "dirItemData.actions.createFolder(); $event.stopPropagation();")
        svg.iconnables
          use(xlink:href = "#icons-folder-new")
        | New Folder

      li(
        ng-if = "dir.attrs.name !== '/'"
        ng-click = "dirItemData.actions.deleteFolder(); $event.stopPropagation();"
      )
        svg.iconnables
          use(xlink:href = "#icons-file-delete")
        | Delete
      li(
        ng-if = "dir.attrs.name !== '/'"
        ng-click = "dirItemData.actions.renameFolder(); $event.stopPropagation();"
      )
        svg.iconnables
          use(xlink:href = "#icons-file-modify")
        | Rename

