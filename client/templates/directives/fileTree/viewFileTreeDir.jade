li.folder(
  ng-class = "{'in': data.open}"
  ng-click = "data.open = !data.open; $event.stopPropagation();"
  popover-file-explorer-menu
)
  svg.iconnables.filetypes.icons-folder
    use(xlink:href = "#icons-folder")
  input.tree-input(
    readonly
    value = "{{ dir.filepath() }}"
  )

  ul(
    ng-if = "data.dirFiles.models.length"
  )
    file-tree-dir(
      ng-if = "dir.attrs.isDir"
      read-only = "readOnly"
      dir = "dir"
      open = "false"
      ng-repeat = "dir in data.dirFiles.models"
      version-or-context = "versionOrContext"
    )
    li(
      ng-repeat = "file in data.dirFiles.models"
      ng-if = "!file.attrs.isDir"
      ng-click = "openFiles.add(file); $event.stopPropagation();"
      ng-class = "{'active': file.state.open}"
    )
      svg.iconnables.filetypes.icons-file
        use(xlink:href = "#icons-file")
      input.tree-input(
        readonly
        value = "{{ file.attrs.name }}"
      )
