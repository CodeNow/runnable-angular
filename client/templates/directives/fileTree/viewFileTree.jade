.explorer-header
  h6(ng-if = "buildFiles.models.length")
    | CONFIG FILES
    button.silver.btn-sm.file-explorer-menu.btn-icon(
      ng-class = "{active: data.showFileMenu}"
      ng-click = "actions.togglePopover('FileMenu', $event)"
    )
      svg.iconnables.icons-gear
        use(xlink:href = "#icons-gear")
      .popover.menu.bottom.fade(
        ng-class = "{in: data.showFileMenu, 'show-add-repo': data.showAddRepo, 'show-form': data.showForm}"
        ng-include = "'viewBuildPopoverFileMenu'"
      )

  ul.file-tree
    //- this is the root dir, there can be only one.
    file-tree-dir(
      open = "true"
      dir = "data.rootDir"
      version = "version"
    )

  //
    li.folder(
      ng-class = "{'in': data.rootOpen}"
      ng-click = "data.rootOpen=!data.rootOpen"
    )
      object.iconnables.filetypes(
        data = "/build/images/icons/filetypes/icons-folder.svg"
        type = "image/svg+xml"
      )
      | /
      ul
        li(
          ng-repeat = "file in rootFiles.models"
          ng-class = "{'folder': file.attrs.isDir}"
        )
          object.iconnables.filetypes(
            data = "/build/images/icons/filetypes/icons-file.svg"
            type = "image/svg+xml"
            ng-if = "!file.attrs.isDir"
          )
          span(ng-if = "!file.attrs.isDir") {{ file.filename() }}
          object.iconnables.filetypes(
            data = "/build/images/icons/filetypes/icons-folder.svg"
            type = "image/svg+xml"
            ng-if = "file.attrs.isDir"
          )


