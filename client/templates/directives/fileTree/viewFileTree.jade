.explorer-header
  //- h6(ng-if = "buildFiles.models.length")
  h6
    | CONFIG FILES
    button.silver.btn-sm.file-explorer-menu.btn-icon(
      ng-class = "{active: data.showFileMenu}"
      ng-click = "actions.togglePopover('FileMenu', $event)"
    )
      svg.iconnables.icons-gear
        use(xlink:href = "#icons-gear")
      .popover.menu.bottom.fade(
        ng-class = "{in: data.showFileMenu, 'show-add-repo': data.actions.showAddRepo, 'show-form': data.actions.showForm}"
        ng-include = "'viewBuildPopoverFileMenu'"
      )

  ul.file-tree
    //- this is the root dir; there can be only one.
    file-tree-dir(
      open = "true"
      dir = "data.rootDir"
      version = "version"
      open-files = "openFiles"
    )
