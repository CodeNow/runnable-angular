#editor-toolbar
  ul#tabs-wrapper
    li(
      ng-repeat = "file in openFiles.collection.models"
    )
      //- title should show the full file path
      a(
        ng-attr-data-title = "{{ file.filename() }}"
        ng-class = "{'active': file.state.active}"
        ng-click = "openFiles.setActiveFile(file); $event.stopPropagation();"
        title = "{{ file.filename() }}"
      ) {{ file.filename() }}
      button.btn-icon(
        ng-click = "openFiles.remove(file); $event.stopPropagation();"
      )
        svg.iconnables.icons-close
          use(xlink:href = "#icons-close")
