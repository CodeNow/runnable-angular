#editor-container(
  ng-switch on = "openFiles.activeFile.attrs.type"
)
  pre(
    ng-switch-default
    ui-ace
    ng-model = "openFiles.activeFile.state.body"
    readonly = "{{ readOnly }}"
    ng-class = "{ \
      readonly: readOnly, \
      'ace-runnable-dark': isDarkTheme \
    }"
  )
  term(
    ng-switch-when = "terminal"
    params = "openFiles.activeFile.attrs.params"
  )
//- TODO
  output-stream(
    ng-switch-when = "outputStream"
  )

